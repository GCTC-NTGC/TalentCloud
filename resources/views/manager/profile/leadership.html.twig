{# =============================================================================

    Talent Cloud
    Manager: Profile - About Me

============================================================================= #}
<section id="managerProfileSectionLeadership" class="manager-profile__section">
	<h3 class="manager-profile__section-title">
		{{ leadership_l10n.my_leadership_style }}
	</h3>
	<fieldset class="form__fieldset">
		<legend class="form__legend">
			{{ leadership_l10n.my_style_values }}
		</legend>
		<div class="flex-grid">
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.leadership_style.en %}active{% endif %}">
					<label class="form__label" for="managerProfileLeadershipStyleEN">
						{{ leadership_l10n.answer_english }}
					</label>
					<textarea class="form__textarea" id="managerProfileLeadershipStyleEN" name="leadership_style[en]">{{ old('leadership_style.en', translations.leadership_style.en) }}</textarea>
				</div>
			</div>
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.leadership_style.fr %}active{% endif %}">
					<label class="form__label" for="managerProfileLeadershipStyleFR">
						{{ leadership_l10n.answer_french }}
					</label>
					<textarea class="form__textarea" id="managerProfileLeadershipStyleFR" name="leadership_style[fr]">{{ old('leadership_style.fr', translations.leadership_style.fr) }}</textarea>
				</div>
			</div>
		</div>
	</fieldset>
	<fieldset class="form__fieldset">
		<legend class="form__legend">
			{{ leadership_l10n.expect_from_employees }}
		</legend>
		<div class="flex-grid">
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.expectations.en %}active{% endif %}">
					<label class="form__label" for="managerProfileExpectationsEN">
						{{ leadership_l10n.answer_english }}
					</label>
					<textarea class="form__textarea" id="managerProfileExpectationsEN" name="expectations[en]">{{ old('expectations.en', translations.expectations.en) }}</textarea>
				</div>
			</div>
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.expectations.fr %}active{% endif %}">
					<label class="form__label" for="managerProfileExpectationsFR">
						{{ leadership_l10n.answer_french }}
					</label>
					<textarea class="form__textarea" id="managerProfileExpectationsFR" name="expectations[fr]">{{ old('expectations.fr', translations.expectations.fr) }}</textarea>
				</div>
			</div>
		</div>
	</fieldset>
	<fieldset class="form__fieldset">
		<legend class="form__legend">
			{{ leadership_l10n.approach_learning_development }}
		</legend>
		<div class="flex-grid">
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.employee_learning.en %}active{% endif %}">
					<label class="form__label" for="managerProfileApproachEN">
						{{ leadership_l10n.answer_english }}
					</label>
					<textarea class="form__textarea" id="managerProfileApproachEN" name="employee_learning[en]">{{ old('employee_learning.en', translations.employee_learning.en) }}</textarea>
				</div>
			</div>
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.employee_learning.fr %}active{% endif %}">
					<label class="form__label" for="managerProfileApproachFR">
						{{ leadership_l10n.answer_french }}
					</label>
					<textarea class="form__textarea" id="managerProfileApproachFR" name="employee_learning[fr]">{{ old('employee_learning.fr', translations.employee_learning.fr) }}</textarea>
				</div>
			</div>
		</div>
	</fieldset>
	<div class="flex-grid manager-profile-action">
		<div class="box full">
			<button class="button--blue light-bg" type="submit" name="submit" value="leadership">
				{{ leadership_l10n.save_leadership_style }}
			</button>
		</div>
	</div>
</section>
