{# =============================================================================

    Talent Cloud
    Manager: Profile - About Me

============================================================================= #}

<section
    id="managerProfileSectionLeadership"
    class="manager-profile__section">

    <h3
        class="manager-profile__section-title">
        {{leadership_l10n.my_leadership_style}}
    </h3>

    <fieldset
        class="form__fieldset">

        <legend
            class="form__legend">
            {{leadership_l10n.my_style_values}}
        </legend>

        <div
            class="flex-grid">

            <div
                class="box med-1of2">

                <div class="form__input-wrapper--float {% if managerEN.leadership_style %}active{% endif %}">
                    <label class="form__label" for="managerProfileLeadershipStyleEN">
                        {{leadership_l10n.answer_english}}
                    </label>
                    <textarea
                        class="form__textarea"
                        id="managerProfileLeadershipStyleEN"
                        name="en[leadership_style]">{{ old('en.leadership_style', managerEN.leadership_style) }}</textarea>
                </div>

            </div>

            <div
                class="box med-1of2">

                <div class="form__input-wrapper--float {% if managerFR.leadership_style %}active{% endif %}">
                    <label class="form__label" for="managerProfileLeadershipStyleFR">
                        {{leadership_l10n.answer_french}}
                    </label>
                    <textarea
                        class="form__textarea"
                        id="managerProfileLeadershipStyleFR"
                        name="fr[leadership_style]">{{ old('fr.leadership_style', managerFR.leadership_style) }}</textarea>
                </div>

            </div>

        </div>

    </fieldset>

    <fieldset
        class="form__fieldset">

        <legend
            class="form__legend">
            {{leadership_l10n.expect_from_employees}}
        </legend>

        <div
            class="flex-grid">

            <div
                class="box med-1of2">

                <div class="form__input-wrapper--float {% if managerEN.expectations %}active{% endif %}">
                    <label class="form__label" for="managerProfileExpectationsEN">
                        {{leadership_l10n.answer_english}}
                    </label>
                    <textarea
                        class="form__textarea"
                        id="managerProfileExpectationsEN"
                        name="en[expectations]">{{ old('en.expectations', managerEN.expectations) }}</textarea>
                </div>

            </div>
            <div
                class="box med-1of2">

                <div class="form__input-wrapper--float {% if managerFR.expectations %}active{% endif %}">
                    <label class="form__label" for="managerProfileExpectationsFR">

                        {{leadership_l10n.answer_french}}
                    </label>
                    <textarea
                        class="form__textarea"
                        id="managerProfileExpectationsFR"
                        name="fr[expectations]">{{ old('fr.expectations', managerFR.expectations) }}</textarea>
                </div>

            </div>

        </div>

    </fieldset>

    <fieldset
        class="form__fieldset">

        <legend
            class="form__legend">
            {{leadership_l10n.approach_learning_development}}
        </legend>

        <div
            class="flex-grid">

            <div
                class="box med-1of2">

                <div class="form__input-wrapper--float {% if managerEN.employee_learning %}active{% endif %}">
                    <label class="form__label" for="managerProfileApproachEN">
                        {{leadership_l10n.answer_english}}
                    </label>
                    <textarea
                        class="form__textarea"
                        id="managerProfileApproachEN"
                        name="en[employee_learning]">{{ old('en.employee_learning', managerEN.employee_learning) }}</textarea>
                </div>

            </div>

            <div
                class="box med-1of2">

                <div class="form__input-wrapper--float {% if managerFR.employee_learning %}active{% endif %}">
                    <label class="form__label" for="managerProfileApproachFR">
                        {{leadership_l10n.answer_french}}
                    </label>
                    <textarea
                        class="form__textarea"
                        id="managerProfileApproachFR"
                        name="fr[employee_learning]">{{ old('fr.employee_learning', managerFR.employee_learning) }}</textarea>
                </div>

            </div>

        </div>

    </fieldset>

    <div class="flex-grid manager-profile-action">

        <div class="box full">
            <button
                class="button--blue light-bg"
                type="submit"
                name="submit"
                value="leadership">
                {{leadership_l10n.save_leadership_style}}
            </button>
        </div>

    </div>

</section>
