        </div>

    </fieldset>

    <div
        class="flex-grid">

        <div
            class="box med-1of2">

        </div>

        <div
            class="box med-1of2">
            <button
                class="button--blue light-bg"
                type="submit"
                name="submit"
                value="leadership">
                {{leadership_l10n.save_leadership_style}}
            </button>
