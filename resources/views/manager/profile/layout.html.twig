{# =============================================================================

    Talent Cloud
    Manager - Profile Layout

============================================================================= #}

<div class="manager-profile__section-wrapper">

	<div class="container--layout">

		<div
			class="flex-grid">

			{# Include Sidebar #}
			{% include "manager/profile/sidebar" with {'sidebar_l10n': layout_l10n.sidebar} %}

			{# Profile Content #}

			<div class="manager-profile__content-wrapper box lg-3of4">

				<div data-c-container="medium">

					<div class="form__wrapper">

						<div class="applicant-profile__about" data-clone>

							<div
								class="applicant-profile__data-wrapper">

								{# 2FA #}

								<h2>{{ layout_l10n.two_factor.two_factor_legend }}</h2>

								<div class="form__input-wrapper--float">

									{% if manager.user.google2fa_secret %}

										<p>{{ layout_l10n.two_factor.two_factor_active }}</p>

										<div class="form__input-wrapper--float">
											<p>{{ layout_l10n.two_factor.two_factor_recovery_text }}
												<a href="{{ route('manager.recovery_codes.show') }}">{{ layout_l10n.two_factor.view_recovery_codes }}</a>.</p>
										</div>

										<form action="{{ route('manager.two_factor.deactivate') }}" method="POST">
											{{ csrf_field() }}
											<button class="button--red light-bg" type="submit">{{ layout_l10n.two_factor.two_factor_deactivate }}</button>
										</form>

									{% else %}

										<p>
											{{ layout_l10n.two_factor.two_factor_inactive.one }}
										</p>
										<p>
											{{ layout_l10n.two_factor.two_factor_inactive.two }}
										</p>
										<ul data-c-margin="bottom(normal)">
											<li>{{ layout_l10n.two_factor.two_factor_inactive.three }}</li>
											<li>{{ layout_l10n.two_factor.two_factor_inactive.four }}</li>
											<li>{{ layout_l10n.two_factor.two_factor_inactive.five }}</li>
											<li>{{ layout_l10n.two_factor.two_factor_inactive.six }}</li>
											<li>{{ layout_l10n.two_factor.two_factor_inactive.seven }}</li>
											<li>{{ layout_l10n.two_factor.two_factor_inactive.eight }}</li>
											<li>{{ layout_l10n.two_factor.two_factor_inactive.nine }}</li>
											<li>{{ layout_l10n.two_factor.two_factor_inactive.ten }}</li>
										</ul>
										<p data-c-margin="bottom(normal)">
											{{ layout_l10n.two_factor.two_factor_inactive.eleven }}
										</p>
										<p>
											<a class="button--blue light-bg" href="{{ route('manager.two_factor.activate') }}">{{ layout_l10n.two_factor.two_factor_button_text }}</a>
										</p>

									{% endif %}

								</div>

							</div>

						</div>

					</div>

					<form
						class="form__wrapper" action="{{ route('manager.profile.update', manager.id) }}" method="post">

						{# Builds an input field for CSRF token validation #}
						{{ csrf_field() }}

						{# Include Account Settings #}

						{% include "manager/profile/account" with {'account_l10n': layout_l10n.account} %}

						{# Include About Me #}

						{% include "manager/profile/about" with {'about_l10n': layout_l10n.about} %}

						{# Include My Leadership Style #}

						{% include "manager/profile/leadership" with {'leadership_l10n': layout_l10n.leadership } %}

					</form>

				</div>

			</div>

		</div>

	</div>
