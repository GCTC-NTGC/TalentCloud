{# =============================================================================

    Talent Cloud
    Manager: Profile - About Me

============================================================================= #}
<section id="managerProfileSectionAbout" class="manager-profile__section">
	<h3 class="manager-profile__section-title">
		{{ about_l10n.about_me }}
	</h3>
	<fieldset class="form__fieldset">
		<legend class="form__legend">
			{{ about_l10n.position }}
		</legend>
		<div class="flex-grid">
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.position.en %}active{% endif %}">
					<label class="form__label" for="managerProfileTitleEN">
						{{ about_l10n.position_english }}
					</label>
					<input required class="form__input" id="managerProfileTitleEN" type="text" name="position[en]" value="{{ old('position.en', translations.position.en) }}"/>
				</div>
			</div>
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.position.fr %}active{% endif %}">
					<label class="form__label" for="managerProfileTitleFR">
						{{ about_l10n.position_french }}
					</label>
					<input required class="form__input" id="managerProfileTitleFR" type="text" name="position[fr]" value="{{ old('position.fr', translations.position.fr) }}"/>
				</div>
			</div>
		</div>
	</fieldset>
	<fieldset class="form__fieldset">
		<legend class="form__legend">
			{{ about_l10n.departmental_information }}
		</legend>
		<div class="flex-grid">
			<div class="box full">
				<div class="form__input-wrapper--select">
					<label class="form__label" for="managerProfileDepartment">
						{{ about_l10n.department }}
					</label>
					<div class="form__select-wrapper fas fa-chevron-down">
						<select required class="form__input form__input__select" id="managerProfileDepartment" name="department_id">
							{% set chosen_name = manager.department.name %}
							<option value="" disabled {% if not chosen_name %} selected {% endif %}>
								{{ about_l10n.department_default_option }}
							</option>
							{% for department in departments %}
								{% set department_name = department.name %}
								<option value="{{ department.id }}" {% if old('department_id') %} {% if old('department_id') == department.id %} selected="selected" {% endif %} {% else %} {% if department_name == chosen_name %} selected="selected" {% endif %} {% endif %}>
									{{ department.name }}
								</option>
							{% endfor %}
						</select>
					</div>
				</div>
			</div>
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.division.en %}active{% endif %}">
					<label class="form__label" for="managerProfileDivision">
						{{ about_l10n.division_english }}
					</label>
					<input class="form__input" id="managerProfileDivision" type="text" name="division[en]" value="{{ old('division.en', translations.division.en) }}"/>
				</div>
			</div>
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.division.fr %}active{% endif %}">
					<label class="form__label" for="managerProfileDivisionFr">
						{{ about_l10n.division_french }}
					</label>
					<input class="form__input" id="managerProfileDivisionFr" type="text" name="division[fr]" value="{{ old('division.fr', translations.division.fr) }}"/>
				</div>
			</div>
		</div>
	</fieldset>
	<fieldset class="form__fieldset">
		<legend class="form__legend">
			{{ about_l10n.personal_information }}
		</legend>
		<div class="flex-grid">
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.education.en %}active{% endif %}">
					<label class="form__label" for="managerProfileEducationEN">
						{{ about_l10n.education_english }}
					</label>
					<textarea class="form__textarea" id="managerProfileEducationEN" name="education[en]">{{ old('education.en',  translations.education.en) }}
					</textarea>
				</div>
			</div>
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.education.fr %}active{% endif %}">
					<label class="form__label" for="managerProfileEducationFR">
						{{ about_l10n.education_french }}
					</label>
					<textarea class="form__textarea" id="managerProfileEducationFR" name="education[fr]">{{ old('education.fr',  translations.education.fr) }}
					</textarea>
				</div>
			</div>
			<div class="box full">
				<div class="form__input-wrapper--float {% if manager.years_experience %}active{% endif %}">
					<label class="form__label" for="managerProfileExperience">
						{{ about_l10n.years_of_experience }}
					</label>
					<input class="form__input" id="managerProfileExperience" type="number" min="0" name="years_experience" value="{{ old('years_experience', manager.years_experience) }}"/>
				</div>
			</div>
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.career_journey.en %}active{% endif %}">
					<label class="form__label" for="managerProfileCareerJourneyEN">
						{{ about_l10n.career_journey_english }}
					</label>
					<textarea class="form__textarea" id="managerProfileCareerJourneyEN" name="career_journey[en]">{{ old('career_journey.en',  translations.career_journey.en) }}</textarea>
				</div>
			</div>
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.career_journey.fr %}active{% endif %}">
					<label class="form__label" for="managerProfileCareerJourneyFR">
						{{ about_l10n.career_journey_french }}
					</label>
					<textarea class="form__textarea" id="managerProfileCareerJourneyFR" name="career_journey[fr]">{{ old('career_journey.fr',  translations.career_journey.fr) }}</textarea>
				</div>
			</div>
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.learning_path.en %}active{% endif %}">
					<label class="form__label" for="managerProfileLearningPathEN">
						{{ about_l10n.learning_path_english }}
					</label>
					<textarea class="form__textarea" id="managerProfileLearningPathEN" name="learning_path[en]">{{ old('learning_path.en',  translations.learning_path.en) }}</textarea>
				</div>
			</div>
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.learning_path.fr %}active{% endif %}">
					<label class="form__label" for="managerProfileLearningPathFR">
						{{ about_l10n.learning_path_french }}
					</label>
					<textarea class="form__textarea" id="managerProfileLearningPathFR" name="learning_path[fr]">{{ old('learning_path.fr',  translations.learning_path.fr) }}</textarea>
				</div>
			</div>
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.about_me.en %}active{% endif %}">
					<label class="form__label" for="managerProfileBiographyEN">
						{{ about_l10n.biography_english }}
					</label>
					<textarea class="form__textarea" id="managerProfileBiographyEN" name="about_me[en]">{{ old('about_me.en', translations.about_me.en) }}</textarea>
				</div>
			</div>
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if translations.about_me.fr %}active{% endif %}">
					<label class="form__label" for="managerProfileBiographyFR">
						{{ about_l10n.biography_french }}
					</label>
					<textarea class="form__textarea" id="managerProfileBiographyFR" name="about_me[fr]">{{ old('about_me.fr', translations.about_me.fr) }}</textarea>
				</div>
			</div>
		</div>
	</fieldset>
	<fieldset class="form__fieldset">
		<legend class="form__legend">
			{{ about_l10n.social_media }}
		</legend>
		<div class="flex-grid">
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if manager.twitter_username %}active{% endif %}">
					<label class="form__label" for="managerProfileTwitter">
						{{ about_l10n.twitter_username }}
					</label>
					<input class="form__input" id="managerProfileTwitter" type="text" name="twitter_username" pattern="{{ twitterHandlePattern }}" value="{{ old('twitter_username', manager.twitter_username) }}"/>
				</div>
			</div>
			<div class="box med-1of2">
				<div class="form__input-wrapper--float {% if manager.linkedin_url %}active{% endif %}">
					<label class="form__label" for="managerProfileLinkedin">
						{{ about_l10n.linkedin_url }}
					</label>
					<input class="form__input" id="managerProfileLinkedin" type="url" name="linkedin_url" pattern="{{ linkedInUrlPattern }}" value="{{ old('linkedin_url', manager.linkedin_url) }}"/>
				</div>
			</div>
		</div>
	</fieldset>
	<div class="flex-grid manager-profile-action">
		<div class="box full">
			<button class="button--blue light-bg" type="submit" name="submit" value="about_me">
				{{ about_l10n.save_about_me }}
			</button>
		</div>
	</div>
</section>
