{# =============================================================================

    Talent Cloud
    Manager: Profile - About Me

============================================================================= #}
<a
    id="culture">
</a>

<section
    id="managerProfileSectionCulture"
    class="manager-profile__section">

    <h3
        class="manager-profile__section-title">
        {{culture_l10n.team_culture}}
    </h3>

    <fieldset
        class="form__fieldset">

        <legend
            class="form__legend">
            {{culture_l10n.primary_information}}
        </legend>

        <div
            class="flex-grid">

            <div
                class="box med-1of3">

                <div class="form__input-wrapper--float {% if team_culture.team_size != null %}active{% endif %}">
                    <label class="form__label" for="managerProfileTeamSize">
                        {{culture_l10n.team_size}}
                    </label>
                    <input
                        class="form__input"
                        id="managerProfileTeamSize"
                        type="number"
                        min="1"
                        name="team_size"
                        value="{{ old('team_size', team_culture.team_size) }}" />
                </div>

            </div>

            <div
                class="box med-2of3">

                <div class="form__input-wrapper--float {% if team_culture.gc_directory_url != null %}active{% endif %}">
                    <label class="form__label" for="managerProfileGCLink">
                        {{culture_l10n.gc_directory_link}}
                    </label>
                    <input
                        class="form__input"
                        id="managerProfileGCLink"
                        type="url"
                        name="gc_directory_url"
                        value="{{ old('gc_directory_url', team_culture.gc_directory_url) }}" />
                </div>

            </div>

        </div>

    </fieldset>

    <fieldset
        class="form__fieldset">

        <legend
            class="form__legend">
            {{culture_l10n.operating_context}}
        </legend>

        <div
            class="flex-grid">

            <div
                class="box med-1of2">

                <div class="form__input-wrapper--float {% if teamCultureEN.operating_context != null %}active{% endif %}">
                    <label class="form__label" for="managerProfileOperatingContextEN">
                        {{culture_l10n.answer_english}}
                    </label>
                    <textarea
                        class="form__textarea"
                        id="managerProfileOperatingContextEN"
                        name="en[operating_context]">{{ old('en.operating_context', teamCultureEN.operating_context) }}</textarea>
                </div>

            </div>

            <div
                class="box med-1of2">

                <div class="form__input-wrapper--float {% if teamCultureFR.operating_context != null %}active{% endif %}">
                    <label class="form__label" for="managerProfileOperatingContextFR">
                        {{culture_l10n.answer_french}}
                    </label>
                    <textarea
                        class="form__textarea"
                        id="managerProfileOperatingContextFR"
                        name="fr[operating_context]">{{ old('fr.operating_context', teamCultureFR.operating_context) }}</textarea>
                </div>

            </div>

        </div>

    </fieldset>

    <fieldset
        class="form__fieldset">

        <legend
            class="form__legend">
            {{culture_l10n.what_we_value}}
        </legend>

        <div
            class="flex-grid">

            <div
                class="box med-1of2">

                <div class="form__input-wrapper--float {% if teamCultureEN.what_we_value != null %}active{% endif %}">
                    <label class="form__label" for="managerProfileValuesEN">
                        {{culture_l10n.answer_english}}
                    </label>
                    <textarea
                        class="form__textarea"
                        id="managerProfileValuesEN"
                        name="en[what_we_value]">{{ old('en.what_we_value', teamCultureEN.what_we_value) }}</textarea>
                </div>

            </div>

            <div
                class="box med-1of2">

                <div class="form__input-wrapper--float {% if teamCultureFR.what_we_value != null %}active{% endif %}">
                    <label class="form__label" for="managerProfileValuesFR">
                        {{culture_l10n.answer_french}}
                    </label>
                    <textarea
                        class="form__textarea"
                        id="managerProfileValuesFR"
                        name="fr[what_we_value]">{{ old('fr.what_we_value', teamCultureFR.what_we_value) }}</textarea>
                </div>

            </div>

        </div>

    </fieldset>

    <fieldset
        class="form__fieldset">

        <legend
            class="form__legend">
            {{culture_l10n.how_we_work}}
        </legend>

        <div
            class="flex-grid">

            <div
                class="box med-1of2">

                <div class="form__input-wrapper--float {% if teamCultureEN.how_we_work != null %}active{% endif %}">
                    <label class="form__label" for="managerProfileHowWorkEN">
                        {{culture_l10n.answer_english}}
                    </label>
                    <textarea
                        class="form__textarea"
                        id="managerProfileHowWorkEN"
                        name="en[how_we_work]">{{ old('en.how_we_work', teamCultureEN.how_we_work) }}</textarea>
                </div>

            </div>

            <div
                class="box med-1of2">

                <div class="form__input-wrapper--float {% if teamCultureFR.how_we_work != null %}active{% endif %}">
                    <label class="form__label" for="managerProfileHowWorkFR">
                        {{culture_l10n.answer_french}}
                    </label>
                    <textarea
                        class="form__textarea"
                        id="managerProfileHowWorkFR"
                        name="fr[how_we_work]">{{ old('fr.how_we_work', teamCultureFR.how_we_work) }}</textarea>
                </div>

            </div>

        </div>

    </fieldset>

    <div class="flex-grid manager-profile-action">

        <div class="box full">
            <button
                class="button--blue light-bg"
                type="submit"
                name="submit"
                value="team_culture">
                {{culture_l10n.save_team_culture}}
            </button>
        </div>

    </div>

</section>
