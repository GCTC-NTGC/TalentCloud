{% extends "layouts/base-h2" %}
{% block title %}
	{{ job_l10n.title }}:
	{% if (app.getLocale() == "en") %}
		{{ job.title.en }}
	{% else %}
		{{ job.title.fr }}
	{% endif %}
{% endblock %}
{% block body %}
	{% include "common/goc" %}
	{% include "common/alert" %}
    {% if is_internet_explorer == true and app.request.cookies.get('browser_message') == false %}
        {% include "common/h2-ie-banner" %}
        {% include "common/h2-ie-dialog" %}
    {% endif %}
	{% include "common/header" with {"header": job_l10n} %}
	<a id="skipLink"></a>
	{% include "manager/job_create/layout" with {"layout_l10n": job_l10n.layout} %}
{% endblock %}
