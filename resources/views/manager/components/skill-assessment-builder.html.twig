<div class="skill-assessment-builder__item flex-grid top {% if template == true %}template{% endif %}">

    <div class="box full">
        <h4 class="skill-title">{{ criterion.skill.skill }}</h4>
    </div>

    <div class="box small-1of5">
        <span class="skill-label">DESCRIPTION LABEL</span>
        <p>{{ criterion.skill.description }}</p>
    </div>

    <div class="box small-1of5">
        <span class="skill-label">{{ skill_template.skill_levels[criterion.skill.skill_type.name][criterion.skill_level.name]|title }}</span>
        <p>NEED SKILL LEVEL DESCRIPTION</p>
    </div>

    <div class="box small-3of5">

        <span class="skill-label">ASSESSMENT TYPES LABEL</span>

        <div class="flex-grid middle skill-assessment-wrapper repeater-list">

            {% include "manager/components/skill-assessment-select" with {"template": true} %}

            <div class="skill-assessment-list repeater-element-list">

                {% include "manager/components/skill-assessment-select" %}

            </div>

            <button class="add-assessment-button repeater-list__add-repeater-trigger"><i class="fa fa-plus"></i></button>

        </div>

    </div>

</div>
