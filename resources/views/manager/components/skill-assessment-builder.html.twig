{% if prefix %}
    {% set name_prefix = prefix ~ "[criteria][:id]" %}
    {% set id_prefix = name_prefix %}
{% else %}
    {% set name_prefix = "criteria[:id]" %}
    {% set id_prefix = name_prefix %}
{% endif %}

{% if criterion %}
    {% set name_prefix = name_prefix|replace({":id":criterion.id}) %}
    {% set id_prefix = id_prefix|replace({":id":criterion.id}) %}
{% endif %}

<div class="skill-assessment-builder__item flex-grid top {% if template == true %}template{% endif %}">

    <div class="box full">
        <h4 class="skill-title">{{ criterion.skill.skill }}</h4>
    </div>

    <div class="box small-1of5">
        <span class="skill-label">{{ screening.interface.plan.skill_description_label }}</span>
        <p>{{ criterion.skill.description }}</p>
    </div>

    <div class="box small-1of5">
        <span class="skill-label">{{ skill_template.skill_levels[criterion.skill.skill_type.name][criterion.skill_level.name]|title }}</span>
        <p>NEED SKILL LEVEL DESCRIPTION</p>
    </div>

    <div class="box small-3of5">

        <span class="skill-label">{{ screening.interface.plan.assessment_types_label }}</span>

        <div class="flex-grid middle skill-assessment-wrapper repeater-list">

            {% include "manager/components/skill-assessment-select" with {"template": true, "prefix": name_prefix } %}

            <div class="skill-assessment-list repeater-element-list">

                {% include "manager/components/skill-assessment-select" with {"item_id": 1, "prefix": name_prefix} %}

            </div>

            <button
                class="add-assessment-button repeater-list__add-repeater-trigger"
                title="{{ screening.interface.plan.add_assessment_title }}">
                <i class="fa fa-plus"></i>
            </button>

        </div>

    </div>

</div>
