<div class="assessment-summary__item flex-grid middle {% if template == true %}template{% endif %}">

    <div class="box small-1of5">
        <span class="skill-label">{{ summary_l10n.assessment_types }}</span>
    </div>

    <div class="box small-4of5">
        <span class="skill-label">{{ summary_l10n.skills_to_assess }}</span>
    </div>

    {% for assessment_type, skills in assessment_plans[plan.id] %}

        <div class="box full row">

            <div class="flex-grid middle">

                <div class="box small-1of5 assessment_label">
                    {{ assessment_type|title }}
                </div>

                <div class="box small-4of5">
                    <ul class="skill-list">
                        {% for skill in skills %}
                            {% for criterion in job.criteria %}
                                {% if skill == criterion.skill.name %}
                                    <li class="{% if criterion.criteria_type.name == "essential" %}green{% else %}blue{% endif %}">{{ skill }} ({{ criterion.level_name|title }})</li>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </ul>
                </div>

            </div>

        </div>

    {% endfor %}

</div>
