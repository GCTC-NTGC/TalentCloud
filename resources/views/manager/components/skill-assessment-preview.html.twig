<div class="skill-assessment-preview__item flex-grid top {% if template == true %}template{% endif %}">

    <div class="box small-1of5">
        <span class="skill-label">{{ criterion.skill.name }}</span>
        <p class="skill-description">{{ criterion.skill.description }}</p>
    </div>

    <div class="box small-1of5">
        <span class="skill-label">{{ criterion.level_name|title }}</span>
        <p class="level-description">{{ criterion.level_description|nl2br }}</p>
    </div>

    <div class="box small-3of5">
        <span class="skill-label">{{ skill_l10n.assessment_types }}</span>
        <ul class="skill-list">
            <li>- {{ skill_l10n.narrative_assessment }}</li>
            {% for assessment in criterion.assessments.where("screening_plan_id", plan.id) %}
                <li>- {{ assessment.assessment_type.name }}</li>
            {% endfor %}
        </ul>
    </div>

</div>
