<div class="skill-assessment-preview__item flex-grid top {% if template == true %}template{% endif %}">

    <div class="box small-1of5">
        <span class="skill-label">{{ criterion.skill.skill }}</span>
        <p>{{ criterion.skill.description }}</p>
    </div>

    <div class="box small-1of5">
        <span class="skill-label">{{ skill_template.skill_levels[criterion.skill.skill_type.name][criterion.skill_level.name]|title }}</span>
        <p>POPULATE WITH CRITERIA LEVEL DESCRIPTION</p>
    </div>

    <div class="box small-3of5">
        <span>{{ screening.interface.plan.assessment_types_label }}</span>
        <ul>
            <li>Talent Cloud Narrative Assessment</li>
            {% for assessment in criterion.assessments %}
                {# {{dump(assessment)}} #}
                {# {{dump(plan.id)}} #}
                {% if assessment.screening_plan_id == plan.id %}
                    {% for assessment_type in assessment_types %}
                        {% if assessment_type.id == assessment.assessment_type_id %}
                            <li>{{ assessment_type.name }}</li>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </ul>
    </div>

</div>
