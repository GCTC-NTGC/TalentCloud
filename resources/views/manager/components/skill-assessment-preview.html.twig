<div class="skill-assessment-preview__item flex-grid top {% if template == true %}template{% endif %}">

    <div class="box small-1of5">
        <span class="skill-label">{{ criterion.skill.skill }}</span>
        <p>{{ criterion.skill.description }}</p>
    </div>

    <div class="box small-1of5">
        <span class="skill-label">{{ criterion.level_name|title }}</span>
        <p>{{ criterion.level_description|nl2br }}</p>
    </div>

    <div class="box small-3of5">
        <span class="skill-label">{{ screening.interface.plan.assessment_types_label }}</span>
        <ul>
            <li>{{ screening.interface.plan.narrative_assessment_label }}</li>
            {% for assessment in criterion.assessments.where("screening_plan_id", plan.id) %}
                {% for assessment_type in assessment_types.where("id", assessment.assessment_type_id) %}
                    <li>{{ assessment_type.name }}</li>
                {% endfor %}
            {% endfor %}
        </ul>
    </div>

</div>
