{# =============================================================================

    Talent Cloud
    Manager: Screening Plan

============================================================================= #}

{% extends "layouts/base" %}

{% block body %}

    {# Alert #}

        {% include "common/alert" %}

    {# Government of Canada #}

        {% include "common/goc" %}

    {# Page Header #}

        {% include "common/header" with {"header":screening} %}

        <a id="skipLink"></a>

    {# Content #}

        <section class="screening-plan-layout">

            <div class="container--layout-xl">

                {# Templates #}

                    {# Assessment Selection #}

                    {# no-prefix marks that partials in this div aren't passed an id prefix. #}
                    {# This is used in app.js individualizeFormIdsAndNames() to avoid overwriting :id in template id. #}
                    <div class="no-prefix">
                        {% include "manager/components/skill-assessment-select" with {"template":true} %}
                    </dev>

                    {# Screening Plan #}

                        {# Screening Plan Layout #}

                            {# {% include "manager/components/screening-plan" with {"template":true} %} #}

                {# Plan Generator #}

                    <h2 class="page-category">{{ screening.interface.job_id_copy }} <span>{{ job.title }}</span></h2>

                    <p class="narrative-warning">{{ screening.interface.narrative_warning }}</p>

                    <form action="{{ route('manager.jobs.screening_plan.store', job) }}" method="POST">

                        {# Builds an input field for CSRF token validation #}
                        {{ csrf_field() }}

                        {# Essential Criteria #}

                        <h3 class="skill-category">{{ screening.interface.essential_skills_label }}</h3>

                        <div class="skill-assessment-builder">

                            {% set essentialCriteria = 0 %}

                            {% for criterion in job.criteria %}

                                {% if criterion.criteria_type.name == "essential" %}

                                    {% include "manager/components/skill-assessment-builder" %}

                                    {% set essentialCriteria = essentialCriteria + 1 %}

                                {% endif %}

                            {% endfor %}

                            {% if essentialCriteria == 0 %}

                                <p class="skill-null-state">{{ screening.interface.essential_skills_null_copy }}</p>

                            {% endif %}

                        </div>

                        {# Asset Criteria #}

                        <h3 class="skill-category">{{ screening.interface.asset_skills_label }}</h3>

                        <div class="skill-assessment-builder">

                            {% set assetCriteria = 0 %}

                            {% for criterion in job.criteria %}

                                {% if criterion.criteria_type.name == "asset" %}

                                    {% include "manager/components/skill-assessment-builder" %}

                                    {% set assetCriteria = assetCriteria + 1 %}

                                {% endif %}

                            {% endfor %}

                            {% if assetCriteria == 0 %}

                                <p class="skill-null-state">{{ screening.interface.asset_skills_null_copy }}</p>

                            {% endif %}

                        </div>

                        {# Generation Button #}

                        <div class="generate-wrapper">

                            <button class="button--blue light-bg" type="submit">{{ screening.interface.build_button_label }}</button>

                        </div>

                    </form>

                {# Screening Plans #}

                    <h2 class="page-category">{{ screening.interface.screening_plan_section_label }}</h2>

                    <p class="screening-plan-context">{{ screening.interface.screening_plan_section_context }}</p>

                    <div class="screening-plan-list">

                        {% for plan in job.screening_plans %}

                            {% include "manager/components/screening-plan" %}

                        {% endfor %}

                    </div>

                    {% include "common/modals/delete_confirmation" with {"modal_id":"deleteScreeningPlan", "modal":screening.delete_plan_modal} %}

            </div>

        </section>

{% endblock %}
