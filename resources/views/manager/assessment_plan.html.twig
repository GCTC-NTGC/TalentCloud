{% extends "layouts/base" %}
{% block title %}
    {% if portal == 'hr' %}
        {{ assessment_plan.hr_title }}
    {% else %}
        {{ assessment_plan.manager_title }}
    {% endif %}
{% endblock %}
{% block body %}
    {% include "common/header" with { 'header': { 'title': assessment_plan.title } } %}
    {% if display_demo_notification %}
        {% include "manager/notification" %}
    {% endif %}
    <a id="skipLink"></a>
    <div data-clone id="assessment-plan-root" data-job-id="{{ job_id|json_encode() }}" data-portal="{{ portal }}"></div>
{% endblock %}
{% block scripts %}
    <script async defer src="{{ asset(mix('/js/AssessmentPlanRoot.js')) }}"></script>
{% endblock %}
