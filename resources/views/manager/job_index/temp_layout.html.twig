{# =============================================================================

    Talent Cloud
    Manager - Job Index Layout

============================================================================= #}
<div class="manager-job-index__section-wrapper manager-job-index__temp">

    <div class="container--layout-xl">

        {% for job in jobs %}

            <div>

                <h3>{{ job.title }}</h3>

                {% for application in job.submitted_applications %}

                    <div class="manager-job-index__temp-labels flex-grid">
                        <div class="box small-1of12">
                            <strong>Name</strong>
                        </div>

                        <div class="box small-2of12">
                            <strong>Info</strong>
                        </div>

                        <div class="box small-2of12">
                            <strong>Reviewed?</strong>
                        </div>

                        <div class="box small-2of12">
                            <strong>Decision</strong>
                        </div>

                        <div class="box small-2of12">
                            <strong>Reviewer</strong>
                        </div>

                        <div class="box small-2of12">
                            <strong>Notes</strong>
                        </div>

                        <div class="box small-1of12">
                            
                        </div>
                    </div>

                    <form class="manager-job-index__temp-form flex-grid middle">

                        <div class="box small-1of12">
                            {{ application.applicant.user.name }}
                        </div>

                        <div class="box small-2of12">
                            <a href="mailto:{{ application.applicant.user.email }}">Email</a>,
                            <a href="{{ route('manager.applicants.show', application.applicant) }}"
                                >Profile</a>,
                            <a href="{{ route('manager.applications.show', application) }}">Application</a>
                        </div>

                        <div class="box small-2of12">
                            <div class="form__input-wrapper--select">
                                <div
                                    class="form__select-wrapper fas fa-chevron-down">
                                    <select
                                        class="form__input">
                                        <option>No</option>
                                        <option>Partially</option>
                                        <option>Yes</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="box small-2of12">
                            <div class="form__input-wrapper--select">
                                <div
                                    class="form__select-wrapper fas fa-chevron-down">
                                    <select
                                        class="form__input">
                                        <option>Undecided</option>
                                        <option>Clarification</option>
                                        <option>Screened In</option>
                                        <option>Screened Out</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="box small-2of12">
                            <div class="form__input-wrapper--select">
                                <div
                                    class="form__select-wrapper fas fa-chevron-down">
                                    <select
                                        class="form__input">
                                        <option>Unassigned</option>
                                        <option>Lauren</option>
                                        <option>Rosita</option>
                                        <option>Shelley</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="box small-2of12">
                            <div class="form__input-wrapper--float">
                                <input
                                    class="form__input"
                                    id=""
                                    placeholder="Other Notes..."
                                    type="text" />
                            </div>
                        </div>

                        <div class="box small-1of12">
                            <button 
                                class="button--blue"
                                type="button">
                                Save
                            </button>
                        </div>

                    </form>

                {% endfor %}

            </div>

        {% endfor %}

    </div>

</div>
