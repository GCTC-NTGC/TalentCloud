{% extends "layouts/base" %}

{% block title %}

    {{ itp.page_title }}

{% endblock %}

{% block body %}

    {# Sitewide Notice ====================================================== #}
    {% include "common/alert" %}

    {# Government of Canada Banner ========================================== #}
    {% include "common/goc" %}

    <div data-clone>

        <div
            data-c-background="white(100)">
            <!-- Heading (see step 00 for info) -->
            <div style="background-image: url('/images/bg_crowd.jpg');" data-c-overlay="black(80)" data-c-padding="bottom(triple)">
                <div data-c-margin="bottom(triple)">
                    {% include "common/menu" %}
                </div>
                <div data-c-container="layout" data-c-alignment="centre">
                    <h2 data-c-colour="white" data-c-font-size="h2" data-c-font-weight="bold" data-c-margin="bottom(double)">
                        Build a Job Poster
                    </h2>
                    <nav aria-label="breadcrumb" data-c-breadcrumbs data-c-colour="white" data-c-margin="bottom(normal)">
                        <ol>
                            <li>
                                <a href="#link-to-page" title="This is the title of the page link.">
                                    Manager Portal
                                </a>
                                <i class="fa fa-caret-right"></i>
                            </li>
                            <li>
                                <a href="#link-to-page" title="This is the title of the page link.">
                                    Job Poster Builder
                                </a>
                                <i class="fa fa-caret-right"></i>
                            </li>
                            <li>
                                <a aria-current="page" href="#link-to-page" title="This is the title of the page link.">
                                    Step 02 (Job Information)
                                </a>
                                <i class="fa fa-caret-right"></i>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
            <!-- Progress Indicator (see step 00 for info) -->
            <div class="manager-jpb-tracker" data-c-alignment="base(centre)" data-c-background="black(100)" data-c-colour="white">
                <div data-c-container="layout" data-c-padding="top(quarter) bottom(quarter)">
                    <div class="tracker manager-jpb-tracker-wrapper">
                        <div class="tracker-item" data-tc-tracker-state="complete" data-c-alignment="base(left)" data-c-margin="top(half) right(normal) bottom(half) left(normal)">
                            <div class="tracker-icon">
                                <i class="fas fa-arrow-down"></i>
                                <i class="fas fa-check"></i>
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div>
                                <span data-c-font-size="small">Step 01</span><br>
                                <span data-c-font-weight="bold">Intro</span>
                            </div>
                        </div>
                        <div class="tracker-item" data-tc-tracker-state="active" data-c-alignment="base(left)" data-c-margin="top(half) right(normal) bottom(half) left(normal)">
                            <div class="tracker-icon">
                                <i class="fas fa-arrow-down"></i>
                                <i class="fas fa-check"></i>
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div>
                                <span data-c-font-size="small">Step 02</span><br>
                                <span data-c-font-weight="bold">Job Info</span>
                            </div>
                        </div>
                        <div class="tracker-item" data-tc-tracker-state="null" data-c-alignment="base(left)" data-c-margin="top(half) right(normal) bottom(half) left(normal)">
                            <div class="tracker-icon">
                                <i class="fas fa-arrow-down"></i>
                                <i class="fas fa-check"></i>
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div>
                                <span data-c-font-size="small">Step 03</span><br>
                                <span data-c-font-weight="bold">Work Env.</span>
                            </div>
                        </div>
                        <div class="tracker-item" data-tc-tracker-state="null" data-c-alignment="base(left)" data-c-margin="top(half) right(normal) bottom(half) left(normal)">
                            <div class="tracker-icon">
                                <i class="fas fa-arrow-down"></i>
                                <i class="fas fa-check"></i>
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div>
                                <span data-c-font-size="small">Step 04</span><br>
                                <span data-c-font-weight="bold">Impact</span>
                            </div>
                        </div>
                        <div class="tracker-item" data-tc-tracker-state="null" data-c-alignment="base(left)" data-c-margin="top(half) right(normal) bottom(half) left(normal)">
                            <div class="tracker-icon">
                                <i class="fas fa-arrow-down"></i>
                                <i class="fas fa-check"></i>
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div>
                                <span data-c-font-size="small">Step 05</span><br>
                                <span data-c-font-weight="bold">Tasks</span>
                            </div>
                        </div>
                        <div class="tracker-item" data-tc-tracker-state="null" data-c-alignment="base(left)" data-c-margin="top(half) right(normal) bottom(half) left(normal)">
                            <div class="tracker-icon">
                                <i class="fas fa-arrow-down"></i>
                                <i class="fas fa-check"></i>
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div>
                                <span data-c-font-size="small">Step 06</span><br>
                                <span data-c-font-weight="bold">Skills</span>
                            </div>
                        </div>
                        <div class="tracker-item" data-tc-tracker-state="null" data-c-alignment="base(left)" data-c-margin="top(half) right(normal) bottom(half) left(normal)">
                            <div class="tracker-icon">
                                <i class="fas fa-arrow-down"></i>
                                <i class="fas fa-check"></i>
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div>
                                <span data-c-font-size="small">Step 07</span><br>
                                <span data-c-font-weight="bold">Education</span>
                            </div>
                        </div>
                        <div class="tracker-item" data-tc-tracker-state="null" data-c-alignment="base(left)" data-c-margin="top(half) right(normal) bottom(half) left(normal)">
                            <div class="tracker-icon">
                                <i class="fas fa-arrow-down"></i>
                                <i class="fas fa-check"></i>
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div>
                                <span data-c-font-size="small">Step 08</span><br>
                                <span data-c-font-weight="bold">Review</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Step Body -->
            <div data-c-container="form" data-c-padding="top(triple) bottom(triple)">
                <h3 data-c-font-size="h3" data-c-font-weight="bold" data-c-margin="bottom(double)">
                    Job Information
                </h3>
                <form data-c-grid="gutter">
                    <div data-c-grid-item="tl(1of2)" data-c-input="text">
                        <label for="builder02JobTitle">What is the job title?</label>
                        <span>Required</span>
                        <div>
                            <input id="builder02JobTitle" placeholder="e.g. Product Designer" value="External Recruiter" required type="text"/>
                        </div>
                        <span>This input has an error.</span>
                    </div>
                    <div data-c-grid-item="tl(1of2)" data-c-input="number">
                        <label for="builder02TermLength">How long is the term (in months)?</label>
                        <span>Required</span>
                        <div>
                            <input id="builder02TermLength" min="3" placeholder="e.g. 3" value="18" required type="number"/>
                        </div>
                        <span>This input has an error.</span>
                    </div>
                    <div data-c-grid-item="tl(1of2)" data-c-input="select">
                        <label for="builder02Classification">What is the classification?</label>
                        <span>Required</span>
                        <div>
                            <i class="fa fa-caret-down"></i>
                            <select id="builder02Classification" required>
                                <option disabled>Select a classification...</option>
                                <option>CS</option>
                                <option selected>AS</option>
                                <option><!-- See doc for all options. --></option>
                            </select>
                        </div>
                        <span>This input has an error.</span>
                    </div>
                    <div data-c-grid-item="tl(1of2)" data-c-input="select">
                        <label for="builder02Level">What is the level?</label>
                        <span>Required</span>
                        <div>
                            <i class="fa fa-caret-down"></i>
                            <select id="builder02Level" required>
                                <option disabled>Select a level...</option>
                                <option>01</option>
                                <option selected>06</option>
                                <option><!-- See doc for all options. --></option>
                            </select>
                        </div>
                        <span>This input has an error.</span>
                    </div>
                    <div data-c-grid-item="tl(1of2)" data-c-input="select">
                        <label for="builder02SecurityLevel">What is the security level?</label>
                        <span>Required</span>
                        <div>
                            <i class="fa fa-caret-down"></i>
                            <select id="builder02SecurityLevel" required>
                                <option disabled selected>Select a security level...</option>
                                <option>Reliability</option>
                                <option selected>Secret</option>
                                <option><!-- See doc for all options. --></option>
                            </select>
                        </div>
                        <span>This input has an error.</span>
                    </div>
                    <div data-c-grid-item="tl(1of2)" data-c-input="select">
                        <label for="builder02Language">What is the language profile?</label>
                        <span>Required</span>
                        <div>
                            <i class="fa fa-caret-down"></i>
                            <select id="builder02Language" required>
                                <option disabled selected>Select a language profile...</option>
                                <option>English Essential</option>
                                <option selected>Bilingual - Advanced</option>
                                <option><!-- See doc for all options. --></option>
                            </select>
                        </div>
                        <span>This input has an error.</span>
                    </div>
                    <div data-c-grid-item="tl(1of2)" data-c-input="text">
                        <label for="builder02City">What city is the team located in?</label>
                        <span>Required</span>
                        <div>
                            <input id="builder02City" placeholder="e.g. Ottawa" value="Ottawa" required type="text"/>
                        </div>
                        <span>This input has an error.</span>
                    </div>
                    <div data-c-grid-item="tl(1of2)" data-c-input="select">
                        <label for="builder02Province">What province is the team located in?</label>
                        <span>Required</span>
                        <div>
                            <i class="fa fa-caret-down"></i>
                            <select id="builder02Province" required>
                                <option disabled selected>Select a province...</option>
                                <option selected>Ontario</option>
                                <option><!-- See doc for all options. --></option>
                            </select>
                        </div>
                        <span>This input has an error.</span>
                    </div>
                    <div data-c-grid-item="base(1of1)" data-c-input="radio">
                        <p data-c-margin="bottom(normal)" data-c-font-weight="bold">Is remote work allowed?</p>
                        <p data-c-margin="bottom(normal)">Want the best talent in Canada? You increase your chances when you allow those in other parts of Canada to apply. Regional diversity also adds perspective to your team culture. Make sure to discuss this in advance with your HR Advisor.</p>
                        <label for="builder02RemoteWork">Select a remote work option:</label>
                        <span>Required</span>
                        <div id="builder02RemoteWork" role="radiogroup">
                            <label for="builder02RemoteWorkOption01">
                                <input id="builder02RemoteWorkOption01" name="builder02RemoteWork" required type="radio"/>
                                <span>Yes, I’m willing to supervise employees anywhere in the world.</span>
                            </label>
                            <!-- Just a heads up this has a default checked value. -->
                            <label for="builder02RemoteWorkOption02">
                                <input checked="checked" id="builder02RemoteWorkOption02" name="builder02RemoteWork" type="radio"/>
                                <span>Yes, I’m willing to supervise employees in any province or territory in Canada.</span>
                            </label>
                            <label for="builder02RemoteWorkOption03">
                                <input id="builder02RemoteWorkOption03" name="builder02RemoteWork" type="radio"/>
                                <span>No, I require the employee in this position to be in the same geographic location as the office</span>
                            </label>
                        </div>
                        <span>This input has an error.</span>
                    </div>
                    <div data-c-grid-item="base(1of1)" data-c-input="radio">
                        <p data-c-margin="bottom(normal)" data-c-font-weight="bold">How often is telework allowed?</p>
                        <p data-c-margin="bottom(normal)">Demonstrate that you trust your employees and you have a positive workplace culture. Allow telework as an option.</p>
                        <label for="builder02Telework">Select a telework option:</label>
                        <span>Required</span>
                        <div id="builder02Telework" role="radiogroup">
                            <label for="builder02TeleworkOption01">
                                <input checked="checked" id="builder02TeleworkOption01" name="builder02Telework" type="radio"/>
                                <span>Almost Always</span>
                            </label>
                            <!-- Just a heads up this has a default checked value. -->
                            <label for="builder02TeleworkOption02">
                                <input id="builder02TeleworkOption02" name="builder02Telework" type="radio"/>
                                <span>Frequently</span>
                            </label>
                            <label for="builder02TeleworkOption03">
                                <input id="builder02TeleworkOption03" name="builder02Telework" type="radio"/>
                                <span>Sometimes</span>
                            </label>
                            <label for="builder02TeleworkOption04">
                                <input id="builder02TeleworkOption04" name="builder02Telework" type="radio"/>
                                <span>Occasionally</span>
                            </label>
                            <label for="builder02TeleworkOption05">
                                <input id="builder02TeleworkOption05" name="builder02Telework" required type="radio"/>
                                <span>Almost Never</span>
                            </label>
                        </div>
                        <span>This input has an error.</span>
                    </div>
                    <div data-c-grid-item="base(1of1)" data-c-input="radio">
                        <p data-c-margin="bottom(normal)" data-c-font-weight="bold">How often are flexible hours allowed?</p>
                        <p data-c-margin="bottom(normal)">Want to support a more gender inclusive workplace? Studies show allowing flex hours is a great way to improve opportunities for women and parents.</p>
                        <label for="builder02FlexHours">Select a flexible hours option:</label>
                        <span>Required</span>
                        <div id="builder02FlexHours" role="radiogroup">
                            <label for="builder02FlexHoursOption01">
                                <input id="builder02FlexHoursOption01" name="builder02FlexHours" type="radio"/>
                                <span>Almost Always</span>
                            </label>
                            <!-- Just a heads up this has a default checked value. -->
                            <label for="builder02FlexHoursOption02">
                                <input id="builder02FlexHoursOption02" name="builder02FlexHours" type="radio"/>
                                <span>Frequently</span>
                            </label>
                            <label for="builder02FlexHoursOption03">
                                <input checked="checked" id="builder02FlexHoursOption03" name="builder02FlexHours" type="radio"/>
                                <span>Sometimes</span>
                            </label>
                            <label for="builder02FlexHoursOption04">
                                <input id="builder02FlexHoursOption04" name="builder02FlexHours" type="radio"/>
                                <span>Occasionally</span>
                            </label>
                            <label for="builder02FlexHoursOption05">
                                <input id="builder02FlexHoursOption05" name="builder02FlexHours" required type="radio"/>
                                <span>Almost Never</span>
                            </label>
                        </div>
                        <span>This input has an error.</span>
                    </div>
                    <div data-c-grid-item="base(1of1)">
                        <hr data-c-margin="top(normal) bottom(normal)">
                    </div>
                    <div data-c-alignment="base(centre) tp(left)" data-c-grid-item="tp(1of2)">
                        <a href="/builder-01" data-c-button="outline(c2)" data-c-radius="rounded" type="button">
                            Previous Step
                        </a>
                    </div>
                    <div data-c-alignment="base(centre) tp(right)" data-c-grid-item="tp(1of2)">
                        <!-- Modal trigger, same as last step. -->
                        <button data-c-button="solid(c2)" data-c-dialog-action="open" data-c-dialog-id="example-dialog-01" data-c-radius="rounded" type="button">
                            Preview
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- This only needs to be included on the page once, and as long as it's inside the data-clone parent element it'll work. -->
        <div data-c-dialog-overlay></div>

        <!-- This is the preview modal, who's content will need to update on the fly so that the preview makes sense when they click next. -->
        <div aria-describedby="example-dialog-01-description" aria-hidden="true" aria-labelledby="example-dialog-01-title" data-c-dialog data-c-dialog-id="example-dialog-01" data-c-padding="top(double) bottom(double)" role="dialog">
            <div data-c-background="white(100)" data-c-radius="rounded">
                <div data-c-background="c1(100)" data-c-border="bottom(thin, solid, black)" data-c-padding="normal">
                    <h5 data-c-colour="white" data-c-font-size="h4" id="example-dialog-01-title">You're off to a great start!
                    </h5>
                </div>
                <!-- This is where the modal content begins. -->
                <div data-c-border="bottom(thin, solid, black)">
                    <div data-c-border="bottom(thin, solid, black)" data-c-padding="normal" id="example-dialog-01-description">
                        Here's a preview of the Job Information you just entered. Feel free to go back and edit things or move to the next step if you're happy with it.
                    </div>
                    <div data-c-background="grey(20)" data-c-border="bottom(thin, solid, black)" data-c-padding="normal">
                        <div class="manager-job-card" data-c-background="white(100)" data-c-padding="normal" data-c-radius="rounded">
                            <h3 data-c-font-size="h3" data-c-font-weight="bold" data-c-margin="bottom(half)">External Recruiter</h3>
                            <p data-c-font-size="h4" data-c-margin="bottom(normal)">Treasury Board of Canada Secretariat</p>
                            <p data-c-margin="bottom(half)"><i data-c-colour="c3" class="fas fa-map-marker-alt" title="Location Icon.">&nbsp;&nbsp;</i>Ottawa, Ontario</p>
                            <p><i data-c-colour="c3" class="fas fa-home" title="Remote Work Icon.">&nbsp;&nbsp;</i>Remote Work Allowed</p>
                            <h4 data-c-font-size="h4" data-c-font-weight="bold" data-c-margin="top(double) bottom(normal)">Basic Information</h4>
                            <div data-c-grid="gutter">
                                <div data-c-grid-item="tp(1of2)">
                                    <p data-c-colour="c3" data-c-margin="bottom(quarter)">Average Annual Salary</p>
                                    <p>Talent Cloud will add this.</p>
                                </div>
                                <div data-c-grid-item="tp(1of2)">
                                    <p data-c-colour="c3" data-c-margin="bottom(quarter)">Language Profile</p>
                                    <p>Bilingual - Advanced</p>
                                </div>
                                <div data-c-grid-item="tp(1of2)">
                                    <p data-c-colour="c3" data-c-margin="bottom(quarter)">Duration</p>
                                    <p>18 Months</p>
                                </div>
                                <div data-c-grid-item="tp(1of2)">
                                    <p data-c-colour="c3" data-c-margin="bottom(quarter)">Security Clearance</p>
                                    <p>Secret</p>
                                </div>
                                <div data-c-grid-item="tp(1of2)">
                                    <p data-c-colour="c3" data-c-margin="bottom(quarter)">Target Start Date</p>
                                    <p>This comes later.</p>
                                </div>
                                <div data-c-grid-item="tp(1of2)">
                                    <p data-c-colour="c3" data-c-margin="bottom(quarter)">Government Classification</p>
                                    <!-- This is combo of two fields above, just as a heads up (classification, level). -->
                                    <p>AS-06</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div data-c-padding="normal">
                        <div data-c-grid="gutter middle">
                            <div data-c-grid-item="base(1of2)">
                                <!-- This simply closes the modal. -->
                                <button data-c-button="outline(c2)" data-c-dialog-action="close" data-c-dialog-id="example-dialog-01" data-c-radius="rounded">
                                    Go Back
                                </button>
                            </div>
                            <div data-c-alignment="base(right)" data-c-grid-item="base(1of2)">
                                <!-- This button needs to be dev'd to take the user to the next step. -->
                                <a data-c-button="solid(c2)" href="/builder-03" data-c-radius="rounded">
                                    Next Step
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
