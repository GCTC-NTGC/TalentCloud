	{% include "common/goc" %}
    {% include "common/alert" %}

    {% include "common/header" with {'header': {'title': ":title: :job"|replace({':title':jobs_l10n.review_applicants, ':job':job.title}) }} %}

    <a id="skipLink"></a>

    <div
        id="review-applications-container"
        data-job-id="{{ job.id }}"
        data-portal={{ is_hr_portal ? "hr" : "manager" }}
    >
    </div>

{% endblock %}
{% block scripts %}
	<script async defer src="{{ asset(mix('/js/ReviewApplicationsRoot.js')) }}"></script>
{% endblock %}
