{# Requires an application object to be passed in #}

{% include 'errors/form_errors' %}

<div class="manager-job-index__temp-labels flex-grid">
    <div class="box small-1of12">
        <strong>Name</strong>
    </div>

    <div class="box small-2of12">
        <strong>Info</strong>
    </div>

    <div class="box small-2of12">
        <strong>Reviewed?</strong>
    </div>

    <div class="box small-2of12">
        <strong>Decision</strong>
    </div>

    <div class="box small-2of12">
        <strong>Reviewer</strong>
    </div>

    <div class="box small-2of12">
        <strong>Notes</strong>
    </div>

    <div class="box small-1of12">

    </div>
</div>

<form class="manager-job-index__temp-form flex-grid middle"
    action="{{ route('application_reviews.update', application) }}"
    method="post">

    {{ csrf_field() }}

    <input type="hidden" name="_method" value="PUT">

    <div class="box small-1of12">
        {{ application.applicant.user.name }}
    </div>

    <div class="box small-2of12">
        <a href="mailto:{{ application.applicant.user.email }}">Email</a>,
        <a href="{{ route('manager.applicants.show', application.applicant) }}"
            >Profile</a>,
        <a href="{{ route('manager.applications.show', application) }}">Application</a>
    </div>

    <div class="box small-2of12">
        <div class="form__input-wrapper--select">
            <div
                class="form__select-wrapper fas fa-chevron-down">
                <select
                    class="form__input"
                    name="review_status">
                    {% for review_status in review_statuses %}
                        <option
                            value="{{ review_status.id }}"
                            {% if review_status.is(application.application_review.review_status) %}selected{% endif %}
                            >{{ review_status.translation }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>

    <div class="box small-2of12">
        <div class="form__input-wrapper--select">
            <div
                class="form__select-wrapper fas fa-chevron-down">
                <select
                    class="form__input"
                    name="review_decision">
                    {% for review_decision in review_decisions %}
                        <option
                            value="{{ review_decision.id }}"
                            {% if review_decision.is(application.application_review.review_decision) %}selected{% endif %}
                            >{{ review_decision.translation }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>

    <div class="box small-2of12">
        <div class="form__input-wrapper--float">
            <input
                class="form__input"
                placeholder="Reviewer"
                name="reviewer"
                type="text"
                required
                value="{{ application.application_review.reviewer }}"/>
        </div>
    </div>

    <div class="box small-2of12">
        <div class="form__input-wrapper--float">
            <input
                class="form__input"
                placeholder="Other Notes..."
                name="notes"
                type="text"
                value="{{ application.application_review.notes }}"/>
        </div>
    </div>

    <div class="box small-1of12">
        <button
            class="button--blue"
            type="submit"
            name="submit"
            value="application_review">
            Save
        </button>
    </div>

</form>
