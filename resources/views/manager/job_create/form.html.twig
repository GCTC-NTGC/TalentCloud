{# =============================================================================

    Talent Cloud
    Manager: Create Job Form

============================================================================= #}
<form
    class="form__wrapper manager-jobs__create-form"
    action="{{ form_action_url }}"
    method="post">

    {# Builds an input field for CSRF token validation #}
    {{ csrf_field() }}

    <a
        aria-hidden="true"
        id="details">
    </a>

    <div
        class="manager-jobs__create-form-section">

        <h4>Job Details</h4>

        {# Job Title #}

            <fieldset
                class="form__fieldset">

                <legend
                    class="form__legend">
                    Job Title
                </legend>

                <div
                class="flex-grid">

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if job.translate('en').title != null %}active{% endif %}">

                            <label
                                class="form__label"
                                for="createJobTitleEN">
                                Job Title (English)
                            </label>

                            <input
                                class="form__input"
                                id="createJobTitleEN"
                                type="text"
                                name="title[en]"
                                value="{{ job.translate('en').title }}">

                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if job.translate('fr').title != null %}active{% endif %}">

                            <label
                                class="form__label"
                                for="createJobTitleFR">
                                Job Title (Fran√ßais)
                            </label>

                            <input
                                class="form__input"
                                id="createJobTitleFR"
                                type="text"
                                name="title[fr]"
                                value="{{ job.translate('fr').title }}">

                        </div>

                    </div>

                </div>

            </fieldset>

        {# Salary #}

            <fieldset
                class="form__fieldset">

                <legend
                    class="form__legend">
                    Salary Range
                </legend>

                <div
                class="flex-grid">

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if job.salary_min != null %}active{% endif %}">

                            <label
                                class="form__label"
                                for="createJobSalaryMin">
                                Minimum Value
                            </label>

                            <input
                                class="form__input"
                                id="createJobSalaryMin"
                                type="number"
                                name="salary_min"
                                value="{{ job.salary_min }}">

                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if job.salary_max != null %}active{% endif %}">

                            <label
                                class="form__label"
                                for="createJobSalaryMax">
                                Maximum Value
                            </label>

                            <input
                                class="form__input"
                                id="createJobSalaryMax"
                                type="number"
                                name="salary_max"
                                value="{{ job.salary_max }}">

                        </div>

                    </div>

                </div>

            </fieldset>

        {# Classifications #}

            <fieldset
                class="form__fieldset">

                <legend
                    class="form__legend">
                    Classifications
                </legend>

                <div
                class="flex-grid">

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if job.classification != null %}active{% endif %}">

                            <label
                                class="form__label"
                                for="createJobClassification">
                                Occupational Group
                            </label>

                            <input
                                class="form__input"
                                id="createJobClassification"
                                type="text"
                                name="classification"
                                value="{{ job.classification }}">

                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if job.noc != null %}active{% endif %}">

                            <label
                                class="form__label"
                                for="createJobNoc">
                                NOC Code
                            </label>

                            <input
                                class="form__input"
                                id="createJobNoc"
                                type="number"
                                name='noc'
                                value="{{ job.noc }}">

                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--select">
                            <label
                                class="form__label"
                                for="createJobSecurityClearance">
                                Security Clearance
                            </label>
                            <div
                                class="form__select-wrapper fas fa-chevron-down">
                                <select
                                    class="form__input"
                                    id="createJobSecurityClearance"
                                    name="security_clearance">
                                    {% for clearance in security_clearances %}
                                        <option
                                            value="{{ clearance.id }}"
                                            {% if clearance.id == job.security_clearance_id %}selected="selected"{% endif %}
                                            >{{ clearance.value }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--select">
                            <label
                                class="form__label"
                                for="createJobLanguageRequirement">
                                Language Requirement
                            </label>
                            <div
                                class="form__select-wrapper fas fa-chevron-down">
                                <select
                                    class="form__input"
                                    id="createJobLanguageRequirement"
                                    name="language_requirement">
                                    {% for language in language_requirments %}
                                        <option
                                            value="{{ language.id }}"
                                            {% if language.id == job.language_requirement_id %}selected="selected"{% endif %}
                                            >{{ language.value }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                    </div>

                </div>

            </fieldset>

        {# Location #}

            <fieldset
                class="form__fieldset">

                <legend
                    class="form__legend">
                    Location
                </legend>

                <div
                    class="flex-grid">

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if job.city != null %}active{% endif %}">

                            <label
                                class="form__label"
                                for="createJobCity">
                                City
                            </label>

                            <input
                                class="form__input"
                                id="createJobCity"
                                type="text"
                                name="city"
                                value="{{ job.city }}">

                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--select">
                            <label
                                class="form__label"
                                for="createJobProvince">
                                Province
                            </label>
                            <div
                                class="form__select-wrapper fas fa-chevron-down">
                                <select
                                    class="form__input"
                                    id="createJobProvince"
                                    name="province">
                                    {% for province in provinces %}
                                        <option
                                            value="{{ province.id }}"
                                            {% if province.id == job.province_id %}selected="selected"{% endif %}
                                            >{{ province.value }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                    </div>

                </div>

            </fieldset>

        {# Timetable #}

            <fieldset
                class="form__fieldset">

                <legend
                    class="form__legend">
                    Timetable
                </legend>

                <div
                    class="flex-grid">

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--date">

                            <label
                                class="form__label"
                                for="createJobOpenDate">
                                Accepting Applications From
                            </label>

                            <input
                                class="form__input"
                                id="createJobOpenDate"
                                type="date"
                                name="open_date_time"
                                value="{{ job.open_date_time|date("Y-m-d") }}">

                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--date">

                            <label
                                class="form__label"
                                for="createJobCloseDate">
                                Accepting Applications To
                            </label>

                            <input
                                class="form__input"
                                id="createJobCloseDate"
                                type="date"
                                name="close_date_time"
                                value="{{ job.close_date_time|date("Y-m-d") }}">

                        </div>

                    </div>

                    <div
                        class="box full">

                        <div
                            class="form__input-wrapper--date">

                            <label
                                class="form__label"
                                for="createJobStartDate">
                                Position Start Date
                            </label>

                            <input
                                class="form__input"
                                id="createJobStartDate"
                                type="date"
                                name="start_date_time"
                                value="{{ job.start_date_time|date("Y-m-d") }}">

                        </div>

                    </div>

                    <div
                        class="box med-full">

                        <div
                            class="form__input-wrapper--float {% if job.term_qty != null %}active{% endif %}">

                            <label
                                class="form__label"
                                for="createJobDuration">
                                Position Duration (Months)
                            </label>

                            <input
                                class="form__input"
                                id="createJobDuration"
                                type="number"
                                name="term_qty"
                                value="{{ job.term_qty }}">

                        </div>

                    </div>

                </div>

            </fieldset>

        {# Departmental Information #}

            <fieldset
                class="form__fieldset">

                <legend
                    class="form__legend">
                    Departmental Information
                </legend>

                <div
                    class="flex-grid">

                    <div
                        class="box full">

                        <div
                            class="form__input-wrapper--select">
                            <label
                                class="form__label"
                                for="createJobDepartment">
                                Department
                            </label>
                            <div
                                class="form__select-wrapper fas fa-chevron-down">
                                <select
                                    class="form__input"
                                    id="createJobDepartment"
                                    name="department">
                                    {% for department in departments %}
                                        <option
                                            value="{{ department.id }}"
                                            {% if (department.id == job.department_id) or
                                                (job.department_id == null and department.id == manager.department_id) %}selected="selected"{% endif %}>
                                            {{ department.value }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if job.translate('en').branch != null or manager.translate('en').branch %}active{% endif %}">
                            <label
                                class="form__label"
                                for="createJobBranchEN">
                                Branch (English)
                            </label>
                            <input
                                class="form__input"
                                id="createJobBranchEN"
                                type="text"
                                name="branch[en]"
                                {# Default value comes from job, if set. Otherwise, comes from manager #}
                                value="{{ job.translate('en').branch ?
                                    job.translate('en').branch :
                                    manager.translate('en').branch }}">
                            </input>
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float
                            {% if job.translate('fr').branch != null or
                                manager.translate('fr').branch %}
                                active
                            {% endif %}">
                            <label class="form__label" for="createJobBranchFR">
                                Branch (Fran√ßais)
                            </label>
                            <input
                                class="form__input"
                                id="createJobBranchFR"
                                type="text"
                                name="branch[fr]"
                                {# Default value comes from job, if set. Otherwise, comes from manager #}
                                value="{{ job.translate('fr').branch ?
                                    job.translate('fr').branch :
                                    manager.translate('fr').branch }}">
                            </input>
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div class="form__input-wrapper--float
                            {% if job.translate('en').divison != null or
                                manager.translate('en').division != null %}
                                active
                            {% endif %}">
                            <label
                                class="form__label"
                                for="createJobDivisionEN">
                                Division (English)
                            </label>
                            <input
                                class="form__input"
                                id="createJobDivisionEN"
                                type="text"
                                name="division[en]"
                                {# Default value comes from job, if set. Otherwise, comes from manager #}
                                value="{{ job.translate('en').division ?
                                    job.translate('en').division :
                                    manager.translate('en').division }}">
                            </input>
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div class="form__input-wrapper--float
                            {% if job.translate('fr').divison != null or
                                manager.translate('fr').division %}
                                active
                            {% endif %}
                            ">
                            <label
                                class="form__label"
                                for="createJobDivisionFR">
                                Division (Fran√ßais)
                            </label>
                            <input
                                class="form__input"
                                id="createJobDivisionFR"
                                type="text"
                                name="division[fr]"
                                {# Default value comes from job, if set. Otherwise, comes from manager #}
                                value="{{ job.translate('fr').division ?
                                    job.translate('fr').division :
                                    manager.translate('fr').division }}">
                            </input>
                        </div>

                    </div>

                </div>

            </fieldset>

        {# Impact #}

            <fieldset
                class="form__fieldset">

                <legend
                    class="form__legend">
                    Impact
                </legend>

                <div
                    class="flex-grid">

                    <div
                        class="box med-1of2">

                        <div class="form__input-wrapper--float
                            {% if job.translate('en').impact != null %}active{% endif %}">
                            <label
                                class="form__label"
                                for="createJobImpactEN">
                                Impact (English)
                            </label>
                            <textarea
                                class="form__textarea"
                                id="createJobImpactEN"
                                name="impact[en]">{{ job.translate('en').impact }}</textarea>
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div class="form__input-wrapper--float
                            {% if job.translate('fr').impact != null %}active{% endif %}">
                            <label class="form__label" for="createJobImpactFR">
                                Impact (Fran√ßais)
                            </label>
                            <textarea
                                class="form__textarea"
                                id="createJobImpactFR"
                                name="impact[fr]">{{ job.translate('fr').impact }}</textarea>
                        </div>

                    </div>

                </div>

            </fieldset>

    </div>

    <a
        aria-hidden="true"
        id="tasks">
    </a>

    <div
        class="manager-jobs__create-form-section">

        <h4>Key Tasks</h4>

        {# Task List #}

            <div
                class="manager-jobs__create-task-wrapper">

                {% set taskCounter = 0 %}

                {% for task in job.job_poster_key_tasks %}

                    {% set taskCounter = taskCounter + 1 %}

                    {% include "manager/job_create/task" %}

                {% endfor %}

                {# Tasks get added here. #}

            </div>

        {# Task Controls #}

            <div
                class="manager-jobs__create-action-wrapper">

                <button
                    type="button"
                    class="button--blue light-bg"
                    id="addTaskButton">
                    Add a Task
                </button>

            </div>

    </div>

    <a
        aria-hidden="true"
        id="skills">
    </a>

    <div
        class="manager-jobs__create-form-section">

        <h4>Skills &amp; Competencies</h4>

        {# Education #}

            <fieldset
                class="form__fieldset">

                <legend
                    class="form__legend">
                    Education or Equivalency
                </legend>

                <div
                class="flex-grid">

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if job.translate('en').education != null %}active{% endif %}">

                            <label
                                class="form__label"
                                for="createJobEducationEN">
                                Education (English)
                            </label>

                            <textarea
                                class="form__textarea"
                                id="createJobEducationEN"
                                name="education[en]">{{ job.translate('en').education }}</textarea>

                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if job.translate('fr').education != null %}active{% endif %}">

                            <label
                                class="form__label"
                                for="createJobEducationFR">
                                Education (Fran√ßais)
                            </label>

                            <textarea
                                class="form__textarea"
                                id="createJobEducationFR"
                                name="education[fr]">{{ job.translate('fr').education }}</textarea>

                        </div>

                    </div>

                </div>

            </fieldset>

            <br>

            <br>

        {# Essential Skills #}

            <h5>Essential Criteria (Hard Skills)</h5>

            <div
                class="manager-jobs__skill-wrapper">

                {# Essential Hard Skills List #}

                    <div
                        class="manager-jobs__create-skill-wrapper">

                        {% set skillCounter = 0 %}

                        {% set skillType = "hard" %}

                        {% for criteria in job.criteria %}

                            {% set skillCounter = skillCounter + 1 %}

                            {% for skill in skills %}

                                {% if criteria.skill.id == skill.id %}

                                    {% set skillType = skill.skill_type.name %}

                                    {% if skillType == "hard" %}
                                        {% include "manager/job_create/criteria" with {"criteria_type":"essential"} %}
                                    {% endif %}

                                {% endif %}

                            {% endfor %}

                        {% endfor %}

                        {# Skills get added here. #}

                    </div>

                    {# Skill Template #}

                    {% include "manager/job_create/criteria" with {"criteria_type":"essential"} %}

                {# Skill Controls #}

                    <div
                        class="manager-jobs__create-action-wrapper">

                        <button
                            type="button"
                            class="manager-jobs__add-skill-button"
                            id="addSkillButton1">
                            Add an Essential Hard Skill
                        </button>

                    </div>

            </div>

            <h5>Essential Criteria (Soft Skills)</h5>

            <div
                class="manager-jobs__skill-wrapper">

                {# Essential Soft Skills List #}

                    <div
                        class="manager-jobs__create-skill-wrapper">

                        {% set skillCounter = 0 %}

                        {% set skillType = "soft" %}

                        {% for criteria in job.criteria %}

                            {% set skillCounter = skillCounter + 1 %}

                            {% for skill in skills %}

                                {% if criteria.skill.id == skill.id %}

                                    {% set skillType = skill.skill_type.name %}

                                    {% if skillType == "soft" %}
                                        {% include "manager/job_create/criteria" with {"criteria_type":"essential"} %}
                                    {% endif %}

                                {% endif %}

                            {% endfor %}

                        {% endfor %}

                        {# Skills get added here. #}

                    </div>

                    {# Skill Template #}

                    {% include "manager/job_create/criteria" with {"criteria_type":"essential"} %}

                {# Skill Controls #}

                    <div
                        class="manager-jobs__create-action-wrapper">

                        <button
                            type="button"
                            class="manager-jobs__add-skill-button"
                            id="addSkillButton2">
                            Add an Essential Hard Skill
                        </button>

                    </div>

            </div>

            <h5>Asset Criteria (Hard Skills)</h5>

            <div
                class="manager-jobs__skill-wrapper">

                {# Asset Hard Skills List #}

                    <div
                        class="manager-jobs__create-skill-wrapper">

                        {% set skillCounter = 0 %}

                        {% set skillType = "hard" %}

                        {% for criteria in job.criteria %}

                            {% set skillCounter = skillCounter + 1 %}

                            {% for skill in skills %}

                                {% if criteria.skill.id == skill.id %}

                                    {% set skillType = skill.skill_type.name %}

                                    {% if skillType == "hard" %}
                                        {% include "manager/job_create/criteria" with {"criteria_type":"asset"} %}
                                    {% endif %}

                                {% endif %}

                            {% endfor %}

                        {% endfor %}

                        {# Skills get added here. #}

                    </div>

                    {# Skill Template #}

                    {% include "manager/job_create/criteria" with {"criteria_type":"asset"} %}

                {# Skill Controls #}

                    <div
                        class="manager-jobs__create-action-wrapper">

                        <button
                            type="button"
                            class="manager-jobs__add-skill-button"
                            id="addSkillButton3">
                            Add an Asset Hard Skill
                        </button>

                    </div>

            </div>

            <h5>Asset Criteria (Soft Skills)</h5>

            <div
                class="manager-jobs__skill-wrapper">

                {# Asset Soft Skills List #}

                    <div
                        class="manager-jobs__create-skill-wrapper">

                        {% set skillCounter = 0 %}

                        {% set skillType = "soft" %}

                        {% for criteria in job.criteria %}

                            {% set skillCounter = skillCounter + 1 %}

                            {% for skill in skills %}

                                {% if criteria.skill.id == skill.id %}

                                    {% set skillType = skill.skill_type.name %}

                                    {% if skillType == "soft" %}
                                        {% include "manager/job_create/criteria" with {"criteria_type":"asset"} %}
                                    {% endif %}

                                {% endif %}

                            {% endfor %}

                        {% endfor %}

                        {# Skills get added here. #}

                    </div>

                    {# Skill Template #}

                    {% include "manager/job_create/criteria" with {"criteria_type":"asset"} %}

                {# Skill Controls #}

                    <div
                        class="manager-jobs__create-action-wrapper">

                        <button
                            type="button"
                            class="manager-jobs__add-skill-button"
                            id="addSkillButton4">
                            Add an Asset Soft Skill
                        </button>

                    </div>

            </div>

    </div>

    <a
        aria-hidden="true"
        id="questions">
    </a>

    <div
        class="manager-jobs__create-form-section">

        <h4>Questions for the Applicant</h4>

        {# Question List #}

            <div
                class="manager-jobs__create-question-wrapper">

                {% set questionCounter = 0 %}

                {% for question in job.job_poster_questions %}

                    {% set questionCounter = questionCounter + 1 %}

                    {% include "manager/job_create/question" %}

                {% endfor %}

                {# Questions get added here. #}

            </div>

        {# Question Controls #}

            <div
                class="manager-jobs__create-action-wrapper">

                <button
                    type="button"
                    class="button--blue light-bg"
                    id="addQuestionButton">
                    Add a Question
                </button>

            </div>

    </div>

    <div
        class="manager-jobs__create-form-section">

        <div
            class="flex-grid manager-jobs__create-submission-wrapper">

            <div
                class="box med-1of2">

                <button
                    class="button--blue light-bg"
                    type="submit"
                    name="submit"
                    value="save">
                    Save and Quit
                </button>

            </div>

            <div
                class="box med-1of2">

                <button
                    class="button--blue light-bg"
                    type="submit"
                    name="submit"
                    value="publish">
                    Publish
                </button>

            </div>

        </div>

    </div>

</form>

{# Templates are placed outside the form, to avoid submitting them #}

{# Question Template #}

{% include "manager/job_create/question" %}

