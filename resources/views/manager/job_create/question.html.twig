{# =============================================================================

    Talent Cloud
    Manager: Create Job Question

============================================================================= #}
{%
    set id_question = "question[" ~ question ? question.id : ':id' ~ "][question][en]"
%}
{%
    set id_description = "question[" ~ question ? question.id : ':id' ~ "][description][en]"
%}
<div
    class="manager-jobs__create-question {% if question == false %}template{% endif %}"
    data-question-id="{% if question == false %}0{% else %}{{ questionCounter }}{% endif %}">

    <fieldset
        class="form__fieldset">

        <legend>

            <div
                class="flex-grid">

                <div
                    class="box small-2of3">
                    {{question_l10n.question_information}}
                </div>

                <div
                    class="box small-1of3">
                    <button
                        aria-label="{{ menu.delete_label }}"
                        class="manager-jobs__delete-question-button">
                        <i class="fas fa-trash-alt"></i>
                        <span class="hidden">{{ menu.delete_label }}</span>
                    </button>
                </div>

            </div>

        </legend>

        <div
            class="flex-grid">

            <div
                class="box med-1of2">

                <div
                    class="flex-grid">

                    <div class="box full">

                        <div
                            class="form__input-wrapper--float {% if question.translate('en').question != false %}active{% endif %}"
                            data-form-id="question-title-english">

                            <label
                                class="form__label"
                                for="{{ id_question }}createJobQuestionEN">
                                {{question_l10n.question_english}}
                            </label>

                            <input
                                {# required #}
                                class="form__input"
                                id="{{ id_question }}createJobQuestionEN"
                                type="text"
                                name="question[{{ question ? question.id : ':id' }}][question][en]"
                                value="{{ question.translate('en').question }}">

                        </div>

                    </div>

                    <div class="box full">

                        <div
                            class="form__input-wrapper--float {% if question.translate('en').description != false %}active{% endif %}"
                            data-form-id="question-description-english">

                            <label
                                class="form__label"
                                for="{{ id_description }}createJobQuestionDescriptionEN">
                                {{question_l10n.description_english}}
                            </label>

                            <textarea
                                class="form__textarea"
                                id="{{ id_description }}createJobQuestionDescriptionEN"
                                name="question[{{ question ? question.id : ':id' }}][description][en]">{{ question.translate('en').description }}</textarea>

                        </div>

                    </div>

                </div>

            </div>

            <div
                class="box med-1of2">

                <div
                    class="flex-grid">

                    <div class="box full">

                        <div
                            class="form__input-wrapper--float {% if question.translate('fr').question != false %}active{% endif %}"
                            data-form-id="question-title-french">

                            <label
                                class="form__label"
                                for="{{ id_question }}createJobQuestionFR">
                                {{question_l10n.question_french}}
                            </label>

                            <input
                                {# required #}
                                class="form__input"
                                id="{{ id_question }}createJobQuestionFR"
                                type="text"
                                name="question[{{ question ? question.id : ':id' }}][question][fr]"
                                value="{{ question.translate('fr').question }}">

                        </div>

                    </div>

                    <div class="box full">

                        <div
                            class="form__input-wrapper--float {% if question.translate('fr').description != false %}active{% endif %}"
                            data-form-id="question-description-french">

                            <label
                                class="form__label"
                                for="{{ id_description }}createJobQuestionDescriptionFR">
                                {{question_l10n.description_french}}
                            </label>

                            <textarea
                                class="form__textarea"
                                id="{{ id_description }}createJobQuestionDescriptionFR"
                                name="question[{{ question ? question.id : ':id' }}][description][fr]">{{ question.translate('fr').description }}</textarea>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </fieldset>

</div>
