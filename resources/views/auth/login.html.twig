{# =============================================================================

    Talent Cloud
    Authentication: Login

============================================================================= #}
{% extends "layouts/base" %}
{% block title %}{{ login.title }}{% endblock %}
{% block body %}
    {% include "common/goc" %}
    <div data-clone>
        <section class="tc-auth" data-c-padding="top(1) bottom(2)" data-c-overlay="black(80)" style="background-image: url('/images/bg_crowd.jpg');">
            <div class="tc-auth-wrapper" data-c-container="small">
                {# Return to the homepage link. #}
                <a data-c-color="white" href={{ home_url }} title="{{ login.return }}">
                    <i class="fas fa-chevron-left" data-c-margin="right(.25)"></i>{{ login.return }}
                </a>
                <div data-c-radius="rounded" data-c-margin="top(1)">
                    {# Auth UI Title Area #}
                    <div class="tc-auth-header gradient-left-right" data-c-padding="all(1)" data-c-align="base(center)">
                        <h1 data-c-font-size="h2" data-c-color="white">{{ login.header }}</h1>
                    </div>
                    {# Login Form #}
                    <form action="{{ routes.login }}" method="POST">
                        {{ csrf_field() }}
                        <div data-c-background="white(100)" data-c-padding="all(1)">
                            <div>
                                {% include "errors/form_errors" %}
                                {# Email Field #}
                                <div data-c-input="email">
                                    <label for="email">{{ login.email }}</label>
                                    <span>{{ trans("forms.required") }}</span>
                                    <div>
                                        <input id="email" name="email" placeholder="{{ login.email_placeholder }}" required type="email" value="{{ old('email') }}"/>
                                    </div>
                                    <span>{{ trans("forms.error") }}</span>
                                </div>
                                {# Password Field #}
                                <div data-c-input="password">
                                    <label for="password">{{ login.password }}</label>
                                    <span>{{ trans("forms.required") }}</span>
                                    <div>
                                        <input id="password" name="password" required type="password" />
                                        <button type="button">
                                            <i class="fas fa-eye"></i>
                                            <i class="fas fa-eye-slash"></i>
                                        </button>
                                    </div>
                                    <span>{{ trans("forms.error") }}</span>
                                </div>
                                {# Remember Me & Password Reset #}
                                <div data-c-grid="middle">
                                    <div data-c-grid-item="base(1of2)">
                                        <div data-c-input="checkbox" class="tc-auth-remember-me">
                                            <span>{{ trans("forms.required") }}</span>
                                            <div>
                                                <label for="rememberMe">
                                                    <input
                                                        id="rememberMe"
                                                        type="checkbox"
                                                        {{ old('remember') ? 'checked' : '' }}
                                                        name="remember"/>
                                                    <span>{{ login.remember_me }}</span>
                                                </label>
                                            </div>
                                            <span>{{ trans("forms.error") }}</span>
                                        </div>
                                    </div>
                                    <div data-c-grid-item="base(1of2)" data-c-align="base(right)">
                                        <a href="{{ routes.password.request }}">
                                            {{ login.forgot_password }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {# UI Actions #}
                        <div data-c-background="white(100)" data-c-padding="all(1)" data-c-border="top(thin, solid, grey)">
                            <div data-c-grid="middle">
                                <div data-c-grid-item="base(1of2)">
                                    <a href="{{ routes.register }}" title="Register for Talent Cloud">
                                        {{ login.register }}
                                    </a>
                                </div>
                                <div data-c-grid-item="base(1of2)" data-c-align="base(right)">
                                    <button data-c-button="solid(c1)" data-c-radius="rounded" type="submit">
                                        {{ login.login }}
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
