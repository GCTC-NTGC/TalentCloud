{# =============================================================================

    Talent Cloud
    Applicant Profile - Experience

============================================================================= #}
{% extends "layouts/base-h2" %}
{% block title %}
	{{ profile.experience_section.experience_title }}
{% endblock %}
{% block body %}
	{% include "common/goc" %}
	{% include "common/alert" %}
	{% include "common/header" with {"header": profile} %}
	<a id="skipLink"></a>
    <div data-clone>
        <div data-c-border="bottom(thin, solid, gray)" data-c-padding="bottom(3)">
            <div data-c-container="large(center)">
                <div data-c-grid="gutter(all, 2)">
                    <div data-c-grid-item="tl(1of4)">
                        {% include "applicant/profile/menu" %}
                    </div>
                    <div data-c-grid-item="tl(3of4)">
                        <div data-c-container="medium(left)">
                            {% include "applicant/profile/updated" %}
                            {# Experience #}
                            <div id="profile-experience" data-applicant-id="{{ applicant.id }}"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
<script async defer src="{{ asset(mix('js/ProfileExperiencePage.js')) }}"></script>
{% endblock %}
