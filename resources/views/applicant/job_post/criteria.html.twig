    Talent Cloud
    Applicant: Jobs - Post: Criteria

============================================================================= #}
<a
    aria-hidden="true"
    class="job-post__anchor"
    id="criteria">
</a>

<section
    class="job-post__criteria">

    <div
        class="flex-grid">

        <div
            class="box full">
            <h4
                class="job-post__criteria-title">
                {{ job_post.criteria.title }}
            </h4>
        </div>

        <div
            class="box full">
            <h5
                class="job-post__criteria-subtitle">
                {{ job_post.criteria.education_title }}
            </h5>
            <p>{{ job.education }}</p>
        </div>

        <div
            class="box full">
            <h5
                class="job-post__criteria-subtitle">
                {{ job_post.criteria.essential_title }}
            </h5>
            <ul
                class="job-post__criteria-list">
                {% for criterion in criteria.essential %}
                    <li>
                        <p>{{ skill_template.skills[criterion.skill.name].name }}</p>
                        <p
                            class="job-post__criteria-level">{{ job_post.criteria.requirement_label }}<span>{{ skill_template.skill_levels[criterion.skill.skill_type.name][criterion.skill_level.name] }}</span></p>
                        <p>{{ criterion.description ? criterion.description : skill_template.skills[criterion.skill.name].description }}</p>
                    </li>
                {% endfor %}
            </ul>
        </div>

        {% if criteria.asset != false %}

            <div
                class="box full">
                <h5
                    class="job-post__criteria-subtitle">
                    {{ job_post.criteria.asset_title }}
                </h5>
                <ul
                    class="job-post__criteria-list">
                    {% for criterion in criteria.asset %}
                        <li>
                            <p>{{ skill_template.skills[criterion.skill.name].name }}</p>
                            <p
                                class="job-post__criteria-level">{{ job_post.criteria.requirement_label }}<span>{{ skill_template.skill_levels[criterion.skill.skill_type.name][criterion.skill_level.name] }}</span></p>
                            <p>{{ criterion.description ? criterion.description : skill_template.skills[criterion.skill.name].description }}</p>
                        </li>
                    {% endfor %}
                </ul>
            </div>

        {% endif %}

    </div>

</section>
