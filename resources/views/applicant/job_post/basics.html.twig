{# =============================================================================

    Talent Cloud
    Applicant: Jobs - Post: Basics

============================================================================= #}
<a
    aria-hidden="true"
    class="job-post__anchor"
    id="basics">
</a>

{# Application Success Message #}
<div data-clone>
    <div data-c-alert="information" data-c-radius="rounded" role="alert" data-c-margin="bottom(2)">
        <div data-c-padding="half">
            <p data-c-margin="bottom(quarter)" data-c-font-weight="bold">
                <i aria-hidden="true" class="fas fa-star"></i>
                We've received your application for this job!
            </p>
            <p>
                You've already submitted an application for this job and will be contacted by email for next steps.
            </p>
        </div>
    </div>
</div>

<section
    class="job-poster__basics">

    {# Basics Content #}

        <div
            class="flex-grid">

            <div
                class="box full">
                <h3
                    class="job-poster__basics-title"
                    id="jobPosterContentTitleBasics">
                    {{ job_post.basics.title }}
                </h3>
            </div>

            <div
                class="box med-1of2">

                <span
                    class="job-poster__basics-label">
                    {{ job_post.basics.salary_label }}
                </span>

                <span
                    class="job-poster__basics-content">
                    {% if (app.getLocale() == "en") %}
                        ${{ job.salary_min|number_format }} - ${{ job.salary_max|number_format }}
                    {% else %}
                        {{ job.salary_min|number_format('0',' ',' ') }}&nbsp;$ - {{ job.salary_max|number_format('0',' ',' ') }}&nbsp;$
                    {% endif %}
                </span>

                <span
                    class="job-poster__basics-label">
                    {{ job_post.basics.duration_label }}
                </span>

                <span
                    class="job-poster__basics-content">
                    {{ job_post.basics.duration[job.job_term.name]|trans_choice(job.term_qty) }}
                </span>

                <span
                    class="job-poster__basics-label">
                    {{ job_post.basics.start_label }}
                </span>

                <span
                    class="job-poster__basics-content">
                    {{ job.start_date_time.format(job_post.basics.start_date_format) }}
                </span>

            </div>

            <div
                class="box med-1of2">

                <span
                    class="job-poster__basics-label">
                    {{ job_post.basics.language_label }}
                </span>

                <span
                    class="job-poster__basics-content">
                    {{ job.language_requirement.value }}
                </span>

                <span
                    class="job-poster__basics-label">
                    {{ job_post.basics.security_label }}
                </span>

                <span
                    class="job-poster__basics-content">
                    {{ job.security_clearance.value }}
                </span>

                <span
                    class="job-poster__basics-label">
                    {{ job_post.basics.classification_label }}
                </span>

                <span
                    class="job-poster__basics-content">
                    {{ job.classification_message ?: noInfo }}
                </span>

            </div>

        </div>

</section>
