{# =============================================================================

    Talent Cloud
    Applicant: Jobs - Post: Layout

============================================================================= #}
<section data-clone>
    <div data-c-border="bottom(thin, solid, gray)">
        <div data-c-container="large(center)" data-c-padding="tb(3)">
            <div data-c-accordion-group>
                <!-- Ongoing Applications -->
                <div data-c-accordion class="active">
                    <button aria-expanded="true" data-c-accordion-trigger tabindex="0" type="button">
                        <div data-c-padding="tb(1)">
                            <p data-c-font-size="h2" data-c-color="c1"><span data-c-font-style="underline">{{ application_index.progress_title }}</span> ({{ applications_in_progress|length }})</p>
                        </div>
                        <span data-c-visibility="invisible">Click to view...</span>
                        <i aria-hidden="true" data-c-accordion-add data-c-colour="c1" data-c-font-size="h3" data-c-font-weight="bold">+</i>
                        <i aria-hidden="true" data-c-accordion-remove data-c-colour="c1" data-c-font-size="h3" data-c-font-weight="bold">-</i>
                    </button>
                    <div aria-hidden="false" data-c-accordion-content>
                        <div data-c-padding="bottom(1)">
                            {% if applications_in_progress|length > 0 %}
                                {% for item in applications_in_progress %}
                                    {% include "applicant/application_index/application" %}
                                {% endfor %}
                            {% else %}
                                {% include "applicant/application_index/null" %}
                            {% endif %}
                        </div>
                    </div>
                </div>
                <!-- Completed Applications -->
                <div data-c-accordion>
                    <button aria-expanded="false" data-c-accordion-trigger tabindex="0" type="button">
                        <div data-c-padding="tb(1)">
                            <p data-c-font-size="h2" data-c-color="c1"><span data-c-font-style="underline">{{ application_index.completed_title }}</span> ({{ completed_applications|length }})</p>
                        </div>
                        <span data-c-visibility="invisible">Click to view...</span>
                        <i aria-hidden="true" data-c-accordion-add data-c-colour="c1" data-c-font-size="h3" data-c-font-weight="bold">+</i>
                        <i aria-hidden="true" data-c-accordion-remove data-c-colour="c1" data-c-font-size="h3" data-c-font-weight="bold">-</i>
                    </button>
                    <div aria-hidden="true" data-c-accordion-content>
                        <div data-c-padding="bottom(1)">
                            {% if completed_applications|length > 0 %}
                                {% for item in completed_applications %}
                                    {% include "applicant/application_index/application" %}
                                {% endfor %}
                            {% else %}
                                {% include "applicant/application_index/null" %}
                            {% endif %}
                        </div>
                    </div>
                </div>
                <!-- Expired Applications -->
                <div data-c-accordion>
                    <button aria-expanded="false" data-c-accordion-trigger tabindex="0" type="button">
                        <div data-c-padding="tb(1)">
                            <p data-c-font-size="h2" data-c-color="c1"><span data-c-font-style="underline">{{ application_index.expired_title }}</span> ({{ expired_applications|length }})</p>
                        </div>
                        <span data-c-visibility="invisible">Click to view...</span>
                        <i aria-hidden="true" data-c-accordion-add data-c-colour="c1" data-c-font-size="h3" data-c-font-weight="bold">+</i>
                        <i aria-hidden="true" data-c-accordion-remove data-c-colour="c1" data-c-font-size="h3" data-c-font-weight="bold">-</i>
                    </button>
                    <div aria-hidden="true" data-c-accordion-content>
                        <div data-c-padding="bottom(1)">
                            {% if expired_applications|length > 0 %}
                                {% for item in expired_applications %}
                                    {% include "applicant/application_index/application" %}
                                {% endfor %}
                            {% else %}
                                {% include "applicant/application_index/null" %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
