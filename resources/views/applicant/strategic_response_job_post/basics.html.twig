<a aria-hidden="true" class="job-post__anchor" id="basics"></a>
<section
	class="job-poster__basics">

	{# Basics Content #}
	<div class="flex-grid">
		<div class="box full">
			<h3 class="job-poster__basics-title" id="jobPosterContentTitleBasics">
				{{ job_post.basics.title }}
			</h3>
		</div>

		<div class="box med-1of2">
			<span class="job-poster__basics-label">
				{{ job_post.basics.duration_label }}
			</span>
			<span
				class="job-poster__basics-content">
				{# New jobs default to terms counted in months. #}
				{{ job_post.strategic_response.various }}
			</span>
            <span class="job-poster__basics-label">
				{{ job_post.basics.security_label }}
			</span>
			<span class="job-poster__basics-content">
				{{ job_post.strategic_response.various }}
			</span>
		</div>

		<div class="box med-1of2">
            <span class="job-poster__basics-label">
				{{ job_post.basics.language_label }}
			</span>
			<span class="job-poster__basics-content">
				{{ job_post.strategic_response.various }}
			</span>
			<span class="job-poster__basics-label">
				{{ job_post.basics.classification_label }}
			</span>
			<span class="job-poster__basics-content">
				{{ job_post.strategic_response.various }}
			</span>
		</div>
	</div>
</section>
