    Talent Cloud
    Applicant: Jobs - Post: Impact

============================================================================= #}

<a
    aria-hidden="true"
    class="job-post__anchor"
    id="impact">
</a>

<section class="job-poster__impact">
    <div class="flex-grid">
        <div class="box med-1of7">
            <i class="fas fa-flag"></i>
        </div>

        <div class="box med-6of7">
            <p>
                {{ job_post.strategic_response.current_employee_alert }}
            </p>
        </div>
    </div>
</section>

<section
    class="job-poster__impact">

    <h3
        class="job-poster__impact-title">
        {{ job_post.impact.title }}
    </h3>

    <p>
        {{ job.dept_impact ? job.dept_impact|nl2br : noInfo }}
    </p>

    <p>
        {{ job.team_impact ? job.team_impact|nl2br : noInfo }}
    </p>

    <p>
        {{ job.hire_impact ? job.hire_impact|nl2br : noInfo }}
    </p>

</section>
