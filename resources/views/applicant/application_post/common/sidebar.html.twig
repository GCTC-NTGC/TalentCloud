{# =============================================================================

    Talent Cloud
    Applicant: Application - Post: Sidebar

============================================================================= #}
<div
    class="application-post__subnav-wrapper box lg-1of4">

    <nav
        class="application-post__subnav-sticky-wrapper">

        {% if application.step == "3" %}
            <h4
                class="application-post_subnav-label">
                {{ application.essential_sidebar_label }}
            </h4>
        {% elseif application.step == "4" %}
            <h4
                class="application-post_subnav-label">
                {{ application.asset_sidebar_label }}
            </h4>
        {% endif %}

            {% if application.step == "3" %}

                {% for criterion in criteria.essential %}

                    <a
                        class="application-post__subnav-item"
                        href="#skill{{ criterion.skill.name }}"
                        title="{{ application.sidebar_item_title }}">
                        {{ skill_template.skills[criterion.skill.name].name }}
                    </a>

                {% endfor %}

            {% elseif application.step == "4" %}

                {% for criterion in criteria.asset %}

                    <a
                        class="application-post__subnav-item"
                        href="#skill{{ criterion.skill.name }}"
                        title="{{ application.sidebar_item_title }}">
                        {{ skill_template.skills[criterion.skill.name].name }}
                    </a>

                {% endfor %}

            {% endif %}

    </nav>

</div>
