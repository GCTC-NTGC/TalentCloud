{# =============================================================================

    Talent Cloud
    Applicant: Submit an Application - Progress Bar

============================================================================= #}
<section class="application-progress-bar" data-c-padding="tb(1)" data-c-background="black(90)">
    <div data-c-container="large(center)">
        <div class="application-post__step-wrapper">
            <span data-c-font-weight="bold" data-c-margin="right(1)" data-c-color="white">{{ application_template.tracker_label }} {{ application_step }} / 6</span>
            {% for item in application_tracker.items %}
                {% if item.status == "null" %}
                <a class="application-progress-bar-item null" disabled title="{{ application_tracker.tracker_link_title }} {{ item.step }}.">
                {% else %}
                <a class="application-progress-bar-item
                        {% if item.status == "error" %}
                            error
                        {% elseif item.status == "complete" %}
                            complete
                        {% endif %}
                        {% if item.step == application_step %}
                            active
                        {% endif %}"
                    href="{{ item.url }}" title="{{ application_tracker.tracker_link_title }} {{ item.step }}.">
                {% endif %}
                    <i class="fas fa-times-circle"></i>
                    <i class="fas fa-circle"></i>
                    <i class="fas fa-check-circle"></i>
                    <span class="invisible">{{ application_tracker.tracker_link_title }} {{ item.step }}.</span>
                </a>
            {% endfor %}
        </div>
    </div>
</section>
