{# =============================================================================

    Talent Cloud
    Applicant: Submit an Application - Integrity Signature

============================================================================= #}
{% extends "response/response-base" %}
{% block title %}
    {{ application_template.complete.step_06_title }}
{% endblock %}
{% block body %}
    <div data-clone>
    {% include "applicant/strategic_response_application/common/tracker-ajax" %}
        <div data-c-padding="bottom(3)" data-c-border="bottom(thin, solid, gray)">
        <form class="form-prevent-multiple-submit" action="{{ form_submit_action }}" method="post">
            {# Builds an input field for CSRF token validation #}
            {{ csrf_field() }}
            <section>
                <div data-c-container="medium(center)">
                    <section data-c-margin="top(2)">{% include "errors/form_errors" %}</section>
                    <h2 data-c-heading="h2" data-c-margin="top(3) bottom(1)">{{ application_template.integrity.title }}</h2>
                    <p data-c-margin="bottom(1)">{{ application_template.integrity.confirmation_copy }}</p>
                    <ul data-c-margin="bottom(1)">
                        {% for confirmation in application_template.strategic_response.confirmations %}
                            <li>{{ confirmation }}</li>
                        {% endfor %}
                    </ul>
                    <div data-c-grid="gutter(all, 1)">
                        <div data-c-input="text" data-c-grid-item="tl(1of2)">
                            <label for="applicationReviewSignature">{{ application_template.integrity.signature_label }}</label>
                            <span>{{ application_template.required_label }}</span>
                            <div>
                                <input id="applicationReviewSignature" name="submission_signature" required type="text" />
                            </div>
                            <span>{{ application_template.input_error }}</span>
                        </div>
                        <div data-c-input="date" data-c-grid-item="tl(1of2)">
                            <label for="applicationReviewDate">{{ application_template.integrity.date_label }}</label>
                            <span>{{ application_template.required_label }}</span>
                            <div>
                                <input id="applicationReviewDate" type="date" required name="submission_date" placeholder="yyyy-mm-dd"/>
                            </div>
                            <span>{{ application_template.input_error }}</span>
                        </div>
                    </div>
                    <hr data-c-hr="thin(gray)" data-c-margin="top(1) bottom(2)">
                    <div data-c-grid="gutter(all, 1)">
                        <div data-c-grid-item="tl(1of3)" class="button-prevent-multiple-submit" data-c-align="base(center) tl(left)">
                            <!-- Can we make sure this button functions as intended? -->
                            <a href="{{ route('job.application.edit.5', job) }}" data-c-button="outline(c1)" data-c-radius="rounded" title="{{ application_template.save_return_button_label }}">
                                {{ application_template.save_return_button_label|replace({":step_id": application_step - 1}) }}
                            </a>
                        </div>
                        <div data-c-grid-item="tl(2of3)" class="button-prevent-multiple-submit" data-c-align="base(center) tl(right)">
                            <button id="save_and_quit" data-c-button="outline(c1)" data-c-margin="right(half)" data-c-radius="rounded" type="submit" name="submit" value="save_and_quit">
                                {{ application_template.save_return_to_applications }}
                            </button>
                            <button data-c-button="solid(go)" data-c-radius="rounded" type="submit" name="submit" value="submit">
                                {{ application_template.integrity.submit_label }}
                            </button>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>
{% endblock %}



