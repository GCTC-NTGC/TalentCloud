{# =============================================================================

    Talent Cloud
    Applicant: Application Post - Questions

============================================================================= #}
<div class="application-post__questions">
    <div
        class="container--copy">
        {# Language for Process #}
        <div class="application-post__veterans">
            <div class="form_wrapper">
                <div class="flex-grid">
                    <h2>
                        {{ application_template.strategic_response.required_title }}
                    </h2>
                    <p>
                        {{ application_template.language_copy }}
                    </p>
                    <div class="box full">
                        <div class="form__input-wrapper--select">
                            <label class="form__label" for="preferred_language_id">
                                {{ application_template.language_label }}
                            </label>
                            <div class="form__select-wrapper fas fa-chevron-down">
                                <select id="preferred_language_id" class="form__input" required name="preferred_language_id">
                                    <option value="" disabled {% if not job_application.preferred_language_id %} selected {% endif %}>
                                        {{ application_template.select_default_option }}
                                    </option>
                                    {% for option in language_options %}
                                        <option value="{{ option.id }}" {% if option.id == job_application.preferred_language_id %} selected {% endif %}>
                                            {{ preferred_language_template[option.name] }}
                                        </option>
                                    {% endfor %}
                                </select>
                                <br><br>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex-grid">
                    <p>
                        {{ application_template.strategic_response.gov_email_copy }}
                    </p>
                    <div class="box full">
                        <div class="form__input-wrapper--float">
                            <label class="form__label" for="gov_email">
                                {{ application_template.strategic_response.gov_email_label }}
                            </label>
                            <input class="form__input" id="gov_email" name="gov_email" required type="email"/>
                            <br><br>
                        </div>
                    </div>
                </div>
                <div class="flex-grid">
                    <p>
                        {{ application_template.strategic_response.security_clearance_copy }}
                    </p>
                    <div class="box full">
                        <div class="form__input-wrapper--select">
                            <label class="form__label" for="security_clearance_id">
                                {{ application_template.strategic_response.security_clearance_label }}
                            </label>
                            <div class="form__select-wrapper fas fa-chevron-down">
                                <select id="security_clearance_id" class="form__input" required name="security_clearance_id">
                                    <option value="" disabled {% if not job_application.security_clearance_id %} selected {% endif %}>
                                        {{ application_template.select_default_option }}
                                    </option>
                                    {% for option in security_clearance_options %}
                                        <option value="{{ option.id }}" {% if option.id == job_application.security_clearance_id %} selected {% endif %}>
                                            {{ option.value }}
                                        </option>
                                    {% endfor %}
                                </select>
                                <br><br>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="application-post__language-declaration">
                    <span>
                        {{ application_template.strategic_response.physical_office_willing_label }}
                    </span>
                    <div class="form__input-wrapper--checkbox">
                        <label class="form-label" for="physical_office_willing">
                            <input id="physical_office_willing" name="physical_office_willing" type="checkbox" {{ job_application.physical_office_willing ? 'checked' : '' }}/>
                            <span class="checkbox__wrapper">
                                <span class="checkbox__content">
                                    <i class="fa fa-check"></i>
                                </span>
                            </span>
                        </label>
                        <p class="box fit">
                            Check for Yes.
                        </p>
                    </div>
                </div>
                {# Director / Reference #}
                <div class="flex-grid">
                    <br><br>
                    <p>
                        {{ application_template.strategic_response.director_copy }}
                    </p>
                    <div class="box full">
                        <div class="form__input-wrapper--float">
                            <label class="form__label" for="director_name">
                                {{ application_template.strategic_response.director_name_label }}
                            </label>
                            <input class="form__input" i="director_name" name="director_name" required type="text" value="{{ job_application.director_name }}"/>
                        </div>
                        <div class="form__input-wrapper--float">
                            <label class="form__label" for="director_title">
                                {{ application_template.strategic_response.director_title_label }}
                            </label>
                            <input class="form__input" id="director_title" name="director_title" required type="text" value="{{ job_application.director_title }}"/>
                        </div>
                        <div class="form__input-wrapper--float">
                            <label class="form__label" for="director_email">
                                {{ application_template.strategic_response.director_email_label }}
                            </label>
                            <input class="form__input" id="director_email" name="director_email" required type="email" value="{{ job_application.director_email }}"/>
                            <br><br>
                        </div>
                    </div>
                    <p>
                        {{ application_template.strategic_response.reference_copy }}
                    </p>
                    <div class="box full">
                        <div class="form__input-wrapper--float">
                            <label class="form__label" for="reference_name">
                                {{ application_template.strategic_response.reference_name_label }}
                            </label>
                            <input class="form__input" id="reference_name" name="reference_name" required type="text" value="{{ job_application.reference_name }}"/>
                        </div>
                        <div class="form__input-wrapper--float">
                            <label class="form__label" for="reference_title">
                                {{ application_template.strategic_response.reference_title_label }}
                            </label>
                            <input class="form__input" id="reference_title" name="reference_title" required type="text" value="{{ job_application.reference_title }}"/>
                        </div>
                        <div class="form__input-wrapper--float">
                            <label class="form__label" for="reference_email">
                                {{ application_template.strategic_response.reference_email_label }}
                            </label>
                            <input class="form__input" id="reference_email" name="reference_email" required type="email" value="{{ job_application.reference_email }}"/>
                            <br><br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% for question in job.job_poster_questions %}
            <div class="application-post__long-form-question">
                <span>
                    {{ question.question }}
                </span>
                <p>
                    {{ question.description }}
                </p>
                <div class="form__input-wrapper--float {% for userAnswer in job_application.job_application_answers %}{% if userAnswer.job_poster_question.id == question.id %}active{% endif %}{% endfor %}">
                    <label class="form__label" for="questions[{{ question.id }}]">
                        {{ application_template.question_label }}
                    </label>
                    <textarea id="questions[{{ question.id }}]" class="form__textarea" name="questions[{{ question.id }}]" required
                        >{% for userAnswer in job_application.job_application_answers %}{% if userAnswer.job_poster_question.id == question.id %}{{ userAnswer.answer }}{% endif %}{% endfor %}</textarea>
                </div>
            </div>
        {% endfor %}
        <div class="flex-grid middle application-post__action-wrapper">
            <div class="box med-1of2">
                <button class="button--blue light-bg" type="submit" name="submit" value="save_and_quit">
                    {{ application_template.save_quit_button_label }}
                </button>
            </div>
            <div class="box med-1of2">
                <button class="button--blue light-bg" type="submit" name="submit" value="save_and_continue">
                    {{ application_template.save_continue_button_label }}
                </button>
            </div>
        </div>
    </div>
</div>
