{# =============================================================================

    Talent Cloud
    Applicant Profile - Skills

============================================================================= #}
{% extends "layouts/base" %}
{% block title %}
	{{ profile.skills_section.skills_title }}
{% endblock %}
{% block body %}
	{% include "common/goc" %}
	{% include "common/alert" %}
	{% include "common/header" with {"header": profile} %}
	<a id="skipLink"></a>
    <div data-clone>
        <div data-c-border="bottom(thin, solid, gray)" data-c-padding="bottom(3)">
            <div data-c-container="large(center)">
                <div data-c-grid="gutter(all, 2)">
                    <div data-c-grid-item="tl(1of4)">
                        {% include "applicant/profile/menu" %}
                    </div>
                    <div data-c-grid-item="tl(3of4)">
                        <div data-c-container="medium(left)" data-c-padding="top(3)">
                            {# Skills #}
	                        {% include "applicant/profile/skills/index" %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
	{# Modals #}
	{% include "common/modal" with {"page": skills_modals} %}
	{% include "common/modals/skills_need_help" %}
{% endblock %}
{% block scripts %}
	<script async defer src="{{ asset(mix('/js/SkillsWordCounter.js')) }}"></script>
{% endblock %}
