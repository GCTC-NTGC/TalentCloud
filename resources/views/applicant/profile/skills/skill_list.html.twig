{# =============================================================================

    Talent Cloud
    Applicant: Profile - Skills List section

    Set skillType to 'soft' or 'hard'.

============================================================================= #}
<div data-c-accordion-group class="profile-element-list">
    {# Set Locale #}
    {% set locale = "profile" %}
    {# Profile Element Template (Sample) #}
    {% include "common/skill" %}
    {% set skillCounter = 0 %}
    {% for skill_declaration in applicant.skill_declarations %}
        {% if skillType == false or skill_declaration.skill.skill_type.name == skillType %}
            {% set skillCounter = skillCounter + 1 %}
            {% include "common/skill" %}
        {% endif %}
    {% endfor %}
    <div class="profile-null {% if skillCounter == 0 %}active{% endif %}" data-c-border="all(thin, solid, gray)" data-c-background="gray(20)" data-c-padding="all(1)" data-c-align="base(center)" data-c-color="gray" data-c-radius="rounded">
        <p>{{ profile.skills_section.null_copy }}</p>
    </div>
</div>
