{# =============================================================================

    Talent Cloud
    Applicant: Profile - About Info

============================================================================= #}
<div
    class="applicant-profile__about">

    <div
        class="container--copy">

        <div
            class="applicant-profile__data-wrapper flex-grid">

            <h3>{{ profile.about_section.about_title }}</h3>

            <p>* {{ profile.about_section.about_gc_disclaimer }}</p>

            <span
                class="centre">

                <a
                    class="button--purple light-bg"
                    href="{{ profile.about_section.gc_link }}"
                    target="_blank"
                    title="{{ profile.about_section.gc_link_title }}">
                    {{ profile.about_section.gc_link_label }}
                </a>

            </span>

        </div>

        {# Social Media #}

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                {{ profile.about_section.social_media_form_legend }}
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if user.twitter.url == true %}active{% endif %}">
                        <label class="form__label" for="editProfileTwitter">
                            {{ profile.about_section.twitter_label }}
                        </label>
                        <input
                            class="form__input"
                            id="editProfileTwitter"
                            type="text"
                            name="twitter_username"
                            value="{{ user.twitter.url }}" />
                    </div>

                </div>

                <div
                    class="box med-1of2">

                    <div class="form__input-wrapper--float {% if user.linkedin.url == true %}active{% endif %}">
                        <label class="form__label" for="editProfileLinkedin">
                            {{ profile.about_section.linkedin_label }}
                        </label>
                        <input
                            class="form__input"
                            id="editProfileLinkedin"
                            type="text"
                            name="linkedin_url"
                            value="{{ user.linkedin.url }}" />
                    </div>

                </div>

            </div>

        </fieldset>

        {# Other Info #}

        <fieldset
            class="form__fieldset">

            <legend
                class="form__legend">
                {{ profile.about_section.other_form_legend }}
            </legend>

            <div
                class="flex-grid">

                <div
                    class="box full">

                    <div class="form__input-wrapper--float {% if user.tagline == true %}active{% endif %}">
                        <label class="form__label" for="editProfileTagline">
                            {{ profile.about_section.tagline_label }}
                        </label>
                        <input
                            class="form__input"
                            id="editProfileTagline"
                            type="text"
                            name="tagline"
                            value="{{ user.tagline }}" />
                    </div>

                </div>

            </div>

        </fieldset>

    </div>

</div>
