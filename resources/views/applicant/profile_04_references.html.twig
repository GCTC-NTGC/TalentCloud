{# =============================================================================

    Talent Cloud
    Applicant Profile - Skills

============================================================================= #}
{% extends "layouts/base-h2" %}
{% block title %}
	{{ profile.reference_section.reference_title }}
{% endblock %}
{% block body %}
	{% include "common/goc" %}
	{% include "common/alert" %}
    {% if is_internet_explorer == true and app.request.cookies.get('browser_message') == false %}
        {% include "common/h2-ie-banner" %}
        {% include "common/h2-ie-dialog" %}
    {% endif %}
	{% include "common/header" with {"header": profile} %}
	<a id="skipLink"></a>
    <div data-clone>
        <div data-c-border="bottom(thin, solid, gray)" data-c-padding="bottom(3)">
            <div data-c-container="large(center)">
                <div data-c-grid="gutter(all, 2)">
                    <div data-c-grid-item="tl(1of4)">
                        {% include "applicant/profile/menu" %}
                    </div>
                    <div data-c-grid-item="tl(3of4)">
                        <div data-c-container="medium(left)" data-c-padding="top(3)">
                            {# References #}
	                        {% include "applicant/profile/references/index" %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
	{# Modals #}
	{% include "common/modal" with {"page": profile} %}
{% endblock %}
