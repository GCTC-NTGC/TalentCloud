{# =============================================================================

    Talent Cloud / Application Action Buttons

    The purpose of this UI is to allow navigation between steps during an
    application.

============================================================================= #}
<div data-c-container="medium" data-c-padding="tb(2)">
    <hr data-c-hr="thin(c1)" data-c-margin="bottom(2)">
    <div data-c-grid="gutter(all, 1)">
        {% if step == 8 %}
            <div data-c-grid-item="base(1of1)">
                <p>Do you give Talent Cloud permission to share your application with other Government of Canada managers who may be looking for a similar set of skills?</p>
            </div>
            <div data-c-grid-item="base(1of1)">
                <div data-c-input="checkbox(single)" data-c-margin="left(2)">
                    <span>Required</span>
                    <div>
                        <label for="langReq">
                            <input
                                id="langReq"
                                type="checkbox"/>
                            <span>I would like Talent Cloud to share my application with other Government of Canada managers looking for similar sets of skills.</span>
                        </label>
                    </div>
                    <span>This input has an error.</span>
                </div>
            </div>
        {% endif %}
        <div data-c-grid-item="tl(1of2)" data-c-align="base(center) tl(left)">
            {% if step == 1 %}
            {% elseif step == 3 %}
                <a
                    href="{{ asset("/demo/application-02") }}"
                    data-c-button="outline(c1)"
                    data-c-radius="rounded"
                    type="button">
                    <span>
                        Return to Previous Step
                    </span>
                </a>
            {% elseif step == 5 %}
                <a
                    href="{{ asset("/demo/application-04") }}"
                    data-c-button="outline(c1)"
                    data-c-radius="rounded"
                    type="button">
                    <span>
                        Return to Previous Step
                    </span>
                </a>
            {% else %}
                <a
                    {% if step == 2 %}
                        href="{{ asset("/demo/application-01") }}"
                    {% elseif step == 4 %}
                        href="{{ asset("/demo/application-03") }}"
                    {% elseif step == 6 %}
                        href="{{ asset("/demo/application-05") }}"
                    {% elseif step == 7 %}
                        href="{{ asset("/demo/application-06") }}"
                    {% elseif step == 8 %}
                        href="{{ asset("/demo/application-07") }}"
                    {% elseif step == 9 %}
                        href="{{ asset("/demo/application-08") }}"
                    {% endif %}
                    data-c-button="outline(c1)"
                    data-c-radius="rounded"
                    type="button">
                    <span>
                        Save &amp; Return to Previous Step
                    </span>
                </a>
            {% endif %}
        </div>
        <div data-c-grid-item="tl(1of2)" data-c-align="base(center) tl(right)">
            {% if step != 1 %}
                <a
                    data-c-button="outline(c1)"
                    data-c-radius="rounded"
                    type="button">
                    <span>
                        Save &amp; Quit
                    </span>
                </a>
            {% endif %}
            {% if step == 1 %}
                <a
                    href="{{ asset("/demo/application-02") }}"
                    data-c-button="solid(c1)"
                    data-c-radius="rounded"
                    type="button">
                    <span>
                        Start My Application
                    </span>
                </a>
            {% elseif step == 3 %}
                <a
                    href="{{ asset("/demo/application-04") }}"
                    data-c-button="solid(c1)"
                    data-c-radius="rounded"
                    type="button">
                    <span>
                        Continue to the Next Step
                    </span>
                </a>
            {% elseif step == 5 %}
                <a
                    href="{{ asset("/demo/application-06") }}"
                    data-c-button="solid(c1)"
                    data-c-radius="rounded"
                    type="button">
                    <span>
                        Continue to the Next Step
                    </span>
                </a>
            {% elseif step == 9 %}
                <a
                    href="{{ asset("/demo/application-10") }}"
                    data-c-button="solid(c1)"
                    data-c-radius="rounded"
                    type="button">
                    <span>
                        Submit Application
                    </span>
                </a>
            {% else %}
                <a
                    {% if step == 2 %}
                        href="{{ asset("/demo/application-03") }}"
                    {% elseif step == 4 %}
                        href="{{ asset("/demo/application-05") }}"
                    {% elseif step == 6 %}
                        href="{{ asset("/demo/application-07") }}"
                    {% elseif step == 7 %}
                        href="{{ asset("/demo/application-08") }}"
                    {% elseif step == 8 %}
                        href="{{ asset("/demo/application-09") }}"
                    {% endif %}
                    data-c-button="solid(c1)"
                    data-c-radius="rounded"
                    type="button">
                    <span>
                        Save &amp; Continue
                    </span>
                </a>
            {% endif %}
        </div>
    </div>
</div>
