{# =============================================================================

    Talent Cloud
    Applicant: Static Credentialing Sidebar

============================================================================= #}
<section
    class="faq">

    <div
        class="container--layout">

        <div
            class="flex-grid">

            {# Include Sidebar #}

                {% include "applicant/static/credentialing_sidebar" %}

            {# Skills Content #}

                <div class="faq__content box lg-3of4">

                    {# To Know #}

                        <a
                            aria-hidden="true"
                            class="faq__anchor"
                            id="{{ faq.know.category_anchor }}">
                        </a>

                        <h3>{{ faq.know.category_title }}</h3>

                        {% for section in faq.know.sections %}

                            <h4>{{ section.title }}</h4>

                            {% for item in section.copy %}

                                {% if item is iterable %}
                                    {% if item.type == "ol" %}
                                        <ol>
                                            {% for list_item in item.items %}
                                                <li>{{ list_item|raw }}</li>
                                            {% endfor %}
                                        </ol>
                                    {% elseif item.type == "ul" %}
                                        <ul>
                                            {% for list_item in item.items %}
                                                <li>{{ list_item|raw }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                {% else %}
                                    <p>{{ item|raw }}</p>
                                {% endif %}

                            {% endfor %}

                        {% endfor %}

                    {# Skill Recognition #}

                        <a
