{% extends "layouts/base-h2" %}
{% block title %}
	{{ ":title: :job"|replace({':title': application_template.view_title, ':job': job.title}) }}
{% endblock %}
{% block body %}
	{% include "common/goc" %}
	{% include "common/alert" %}
	{% if is_internet_explorer == true and app.request.cookies.get('browser_message') == false %}
		{% include "common/h2-ie-banner" %}
		{% include "common/h2-ie-dialog" %}
	{% endif %}
	{% include "common/header" with {'header': {'title': ":title: :job"|replace({':title': application_template.view_title, ':job': job.title})}} %}
	<a id="skipLink"></a>
	{% include application_view_template with {submitted: "true"} %}
{% endblock %}
