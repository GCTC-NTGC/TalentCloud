{% endblock %}
{% block body %}
    {% include "common/goc" %}
    {% include "common/alert" %}
    <div data-clone>
        {# Header #}
        <div data-c-overlay="black(80)" style="background-image: url('/images/bg_crowd.jpg');" data-c-padding="bottom(3)">
            {% include "common/menu" %}
            <div data-c-container="large">
                <h1 data-c-heading="h1" data-c-margin="tb(3)">Manager &amp; HR Resources</h1>
                <nav aria-label="breadcrumb" data-c-breadcrumbs data-c-color="white">
                    <ol>
                        <li>
                            <a href="#link-to-page" title="This is the title of the page link.">Talent Cloud</a><i>/</i>
