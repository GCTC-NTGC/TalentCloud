{# =============================================================================

    Talent Cloud
    Degree

============================================================================= #}
<div
    class="profile-element accordion degree {% if degree == false %}template active{% endif %} modal-target-object"
    data-item-id="{{ degree ? degree.id : 0 }}">

    {% if degree %}
        {% set name_suffix = "[old][:id]"|replace({":id":degree.id}) %}
        {% set id_suffix = "_old_:id"|replace({":id":degree.id}) %}
    {% else %}
        {% set name_suffix = "[new]" %}
        {% set id_suffix = "_new" %}
    {% endif %}

    {# Accordion Trigger #}

        <div
            {% if degree == false %}
                aria-expanded="true"
            {% else %}
                aria-expanded="false"
            {% endif %}
            class="accordion-trigger"
            tabindex="0">

            <span
                class="accordion-title">
                {% if degree == false %}
                    {{ degree_template.new_degree_label }}
                {% else %}
                    {{ degree_template.types[degree.degree_type.name]|title }}, {{ degree.area_of_study }}
                {% endif %}
            </span>

            <i class="fas fa-chevron-up"></i>

        </div>

    {# Accordion Content #}

        <div
            {% if degree == false %}
                aria-hidden="false"
            {% else %}
                aria-hidden="true"
            {% endif %}
            class="accordion-content">

            <div
                class="form__wrapper">

                <div
                    class="flex-grid">

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--select">
                            <label
                                class="form__label"
                                for="degreeType{{ id_suffix }}">
                                {{ degree_template.type_label }}
                            </label>
                            <div
                                class="form__select-wrapper fas fa-chevron-down">
                                <select
                                    class="form__input"
                                    id="degreeType{{ id_suffix }}"
                                    name="degree_type{{ name_suffix }}">
                                    {% for degree_type in degree_types %}
                                        <option
                                            {% if degree.degree_type.id == degree_type.id %}selected="selected"{% endif %}
                                            value="{{ degree_type.id }}"
                                            >{{ degree_template.types[degree_type.name] }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if degree.area_of_study == true %}active{% endif %}">
                            <label
                                class="form__label"
                                for="degreeArea{{ id_suffix }}">
                                {{ degree_template.aoe_label }}
                            </label>
                            <input
                                class="form__input"
                                id="degreeArea{{ id_suffix }}"
                                type="text"
                                name="degree_area{{ name_suffix }}"
                                value="{{ degree.area_of_study }}" />
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if degree.institution == true %}active{% endif %}">
                            <label
                                class="form__label"
                                for="degreeInstitution{{ id_suffix }}">
                                {{ degree_template.institution_label }}
                            </label>
                            <input
                                class="form__input"
                                id="degreeInstitution{{ id_suffix }}"
                                type="text"
                                name="degree_institution{{ name_suffix }}"
                                value="{{ degree.institution }}" />
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if degree.thesis == true %}active{% endif %}">
                            <label
                                class="form__label"
                                for="degreeThesis{{ id_suffix }}">
                                {{ degree_template.thesis_label }}
                            </label>
                            <input
                                class="form__input"
                                id="degreeThesis{{ id_suffix }}"
                                type="text"
                                name="degree_thesis{{ name_suffix }}"
                                value="{{ degree.thesis }}" />
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--date">

                            <label
                                class="form__label"
                                for="degreeStartDate{{ id_suffix }}">
                                {{ degree_template.start_date_label }}
                            </label>

                            <input
                                class="form__input"
                                id="degreeStartDate{{ id_suffix }}"
                                type="date"
                                name="degree_start_date{{ name_suffix }}"
                                value="{{ degree.start_date }}">

                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--date">

                            <label
                                class="form__label"
                                for="degreeEndDate{{ id_suffix }}">
                                {{ degree_template.end_date_label }}
                            </label>

                            <input
                                class="form__input"
                                id="degreeEndDate{{ id_suffix }}"
                                type="date"
                                name="degree_end_date{{ name_suffix }}"
                                value="{{ degree.end_date }}">

                        </div>

                    </div>

                </div>

            </div>

            <div
                class="accordion-actions flex-grid">

                <div
                    class="box med-1of2">
                    <button
                        class="button--red light-bg modal-trigger"
                        data-modal-id="deleteDegree"
                        type="button">
                        {{ degree_template.action_01 }}
                    </button>
                </div>

                <div
                    class="box med-1of2">
                    <button
                        class="button--blue light-bg"
                        type="submit"
                        name="submit"
                        value="degree{{ name_suffix }}">
                        {{ degree_template.action_02 }}
                    </button>
                </div>

            </div>

        </div>

</div>
