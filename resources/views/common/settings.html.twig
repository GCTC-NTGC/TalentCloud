                        <p data-c-margin="bottom(normal)">{{ settings.goc_copy }}</p>
                        <div data-c-grid="gutter">
                            <div
                                data-c-grid-item="base(1of1)">
                                <div data-c-alert="information" data-c-radius="rounded" role="alert" data-c-margin="bottom(normal)">
                                    <div
