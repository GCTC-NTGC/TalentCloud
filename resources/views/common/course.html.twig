{# =============================================================================

    Talent Cloud
    Course

============================================================================= #}
<div
    class="profile-element accordion course {% if course == false %}template active{% endif %}"
    data-item-id="{{ course ? course.id : 0 }}">

    {% if course %}
        {% set name_suffix = "[old][:id]"|replace({":id":course.id}) %}
        {% set id_suffix = "_old_:id"|replace({":id":course.id}) %}
    {% else %}
        {% set name_suffix = "[new]" %}
        {% set id_suffix = "_new" %}
    {% endif %}

    {# Accordion Trigger #}

        <div
            {% if course == false %}
                aria-expanded="true"
            {% else %}
                aria-expanded="false"
            {% endif %}
            class="accordion-trigger"
            tabindex="0">

            <span
                class="accordion-title">
                {% if course == false %}
                    {{ course_template.new_course_label }}
                {% else %}
                    {{ course.name }}
                {% endif %}
            </span>

            <i class="fas fa-chevron-up"></i>

        </div>

    {# Accordion Content #}

        <div
            {% if course == false %}
                aria-hidden="false"
            {% else %}
                aria-hidden="true"
            {% endif %}
            class="accordion-content">

            <div
                class="form__wrapper">

                <div
                    class="flex-grid">

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if course.name == true %}active{% endif %}">
                            <label
                                class="form__label"
                                for="courseName{{ id_suffix }}">
                                {{ course_template.name_label }}
                            </label>
                            <input
                                class="form__input"
                                id="courseName{{ id_suffix }}"
                                type="text"
                                name="course_name{{ name_suffix }}"
                                value="{{ course.name }}" />
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--float {% if course.institution == true %}active{% endif %}">
                            <label
                                class="form__label"
                                for="courseInstitution{{ id_suffix }}">
                                {{ course_template.institution_label }}
                            </label>
                            <input
                                class="form__input"
                                id="courseInstitution{{ id_suffix }}"
                                type="text"
                                name="course_institution{{ name_suffix }}"
                                value="{{ course.institution }}" />
                        </div>

                    </div>

                    <div
                        class="box full">

                        <div
                            class="form__input-wrapper--select">
                            <label
                                class="form__label"
                                for="courseStatus{{ id_suffix }}">
                                {{ course_template.status_label }}
                            </label>
                            <div
                                class="form__select-wrapper fas fa-chevron-down">
                                <select
                                    class="form__input"
                                    id="courseStatus{{ id_suffix }}"
                                    name="course_status{{ name_suffix }}">
                                    {% for status in course_status %}
                                        <option
                                            {% if course.course_status.id == status.id %}selected="selected"{% endif %}
                                            value="{{ status.id }}">{{ course_template.statuses[status.name] }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--date">

                            <label
                                class="form__label"
                                for="courseStartDate{{ id_suffix }}">
                                {{ course_template.start_date_label }}
                            </label>

                            <input
                                class="form__input"
                                id="courseStartDate{{ id_suffix }}"
                                type="date"
                                name="course_start_date{{ name_suffix }}"
                                value="{{ course.start_date }}">

                        </div>

                    </div>

                    <div
                        class="box med-1of2">

                        <div
                            class="form__input-wrapper--date">

                            <label
                                class="form__label"
                                for="courseEndDate{{ id_suffix }}">
                                {{ course_template.end_date_label }}
                            </label>

                            <input
                                class="form__input"
                                id="courseEndDate{{ id_suffix }}"
                                type="date"
                                name="course_end_date{{ name_suffix }}"
                                value="{{ course.end_date }}">

                        </div>

                    </div>

                </div>

            </div>

            <div
                class="accordion-actions flex-grid">

                <div
                    class="box med-1of2">
                    <button
                        class="button--red light-bg modal-trigger"
                        data-modal-id="deleteCourse"
                        type="button">
                        {{ course_template.action_01 }}
                    </button>
                </div>

                <div
                    class="box med-1of2">
                    <button
                        class="button--blue light-bg"
                        type="submit"
                        name="submit"
                        value="course{{ name_suffix }}">
                        {{ course_template.action_02 }}
                    </button>
                </div>

            </div>

        </div>

</div>
