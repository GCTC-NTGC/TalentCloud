{# =============================================================================

    Talent Cloud
    Menu

============================================================================= #}
<nav class="menu">

	<button class="menu__mobile-trigger" onclick="">
		<i class="fas fa-bars"></i>
		<i class="fas fa-times"></i>
		<span class="invisible">{{ menu.mobile_trigger_label }}</span>
	</button>

	<ul class="menu__list">
		{% for key,item in menu.items %}
			<li {% if key == "itp" %} class="menu-itp" {% endif %}>
				<a class="{{ item.active ? 'active' : '' }}" href="{{ item.link }}" title="Visit {{ item.name }}.">
					<span>{{ item.name }}</span>
					{% if key == "itp" %}
						<img src="/images/bg_indigenous.jpg" alt="{{ item.alt }}">
					{% endif %}
				</a>
			</li>

		{% endfor %}

		{% if auth_guest() %}
			<li>
				<a href="{{ login_modals.login_link }}">{{ menu.login }}</a>
			</li>
			<li>
				<a href="{{ login_modals.register_link }}">{{ menu.register }}</a>
			</li>
		{% else %}
			<li>
				<a href="{{ login_modals.settings_link }}">{{ menu.settings }}</a>
			</li>
		</a>
	</li>
	<li>
		<a href="{{ login_modals.logout_link }}" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">
			{{ menu.logout }}
		</a>
		<form id="logout-form" action="{{ login_modals.logout_link }}" method="POST" style="display: none;">
			{{ csrf_field() }}
		</form>
	</li>
{% endif %}</ul></nav>
