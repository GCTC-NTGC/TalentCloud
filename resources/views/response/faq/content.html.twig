<div data-c-border="bottom(thin, solid, gray)" data-c-padding="bottom(3)">
    <div data-c-container="large(center)">
        <div data-c-grid="gutter(all, 2)">
            <div data-c-grid-item="tl(1of4)">
                {% include "response/faq/sidebar" %}
            </div>
            <div data-c-grid-item="tl(3of4)">
                <div data-c-container="medium(left)">
                    <div data-c-accordion-group>
                        {% for section in response_faq.content %}
                            <h2 data-c-heading="h2" data-c-padding="top(3)" data-c-margin="bottom(1)" id="{{ section.id }}">{{ section.section }}</h2>
                            {% for question in section.questions %}
                                <!-- Accordion -->
                                <div data-c-accordion data-c-card data-c-margin="top(.5)" class="clone-accordion" id="{{ question.id }}">
                                    <button data-c-accordion-trigger tabindex="0" type="button">
                                        <div data-c-padding="all(1)">
                                            <p data-c-font-weight="bold">{{ question.question|raw }}</p>
                                        </div>
                                        <span data-c-visibility="invisible">Click to view...</span>
                                        <i aria-hidden="true" data-c-color="c1" data-c-accordion-add data-c-font-size="h3" data-c-font-weight="bold">+</i>
                                        <i aria-hidden="true" data-c-color="c1" data-c-accordion-remove data-c-font-size="h3" data-c-font-weight="bold">-</i>
                                    </button>
                                    <div data-c-accordion-content>
                                        <hr data-c-hr="thin(gray)">
                                        <div data-c-padding="rl(1) bottom(1)">
                                            {% for answer in question.answers %}
                                                <p data-c-margin="top(1)">{{ answer|raw }}</p>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
