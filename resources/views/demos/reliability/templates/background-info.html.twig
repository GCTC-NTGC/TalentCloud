    <label for="screeningApplication">Please confirm:</label>
    <span>Required</span>
    <div id="screeningApplication" role="radiogroup">
        <label for="screeningApplicationTrue" data-gc-screen-apply-true-trigger>
            <input id="screeningApplicationTrue" required name="screeningApplication" type="radio" />
            <span>Yes, I have applied.</span>
        </label>
        <label for="screeningApplicationFalse" data-gc-screen-apply-false-trigger>
            <input id="screeningApplicationFalse" required name="screeningApplication" type="radio" />
            <span>No, I've never applied.</span>
        </label>
