{
    "private": true,
    "name": "gc-talentcloud",
    "description": "A cloud for talent!",
    "version": "1.0.0",
    "license": "MIT",
    "keywords": [
        "talent",
        "cloud"
    ],
    "scripts": {
        "dev": "npm run development",
        "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "hot": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
        "prod": "npm run production",
        "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "lightcrawler-a": "lightcrawler -u http://localhost:8000 -c lightcrawler.json",
        "lightcrawler-m": "lightcrawler -u http://localhost:8000/en/manager -c lightcrawler.json",
        "testcafe": "testcafe all tests/Browser/*.js -S -s tests/Browser/screenshots -u -e",
        "testcafe-ci": "testcafe chrome:headless,firefox:headless tests/Browser/*.js -u -e"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^5.8.0",
        "@types/classnames": "^2.2.7",
        "@types/node": "^11.9.4",
        "@types/react": "^16.8.4",
        "@types/react-dom": "^16.8.2",
        "@types/react-intl": "^2.3.17",
        "@typescript-eslint/eslint-plugin": "^1.4.0",
        "@typescript-eslint/parser": "^1.4.0",
        "cross-env": "^5.2.0",
        "cssnano": "^4.1.7",
        "eslint": "^5.14.1",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^4.0.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-react": "^7.12.4",
        "imagemin": "^6.1.0",
        "jquery": "^3.1.0",
        "laravel-mix": "^4.0.15",
        "lightcrawler": "0.0.9",
        "node-sass": "^4.11.0",
        "prettier": "^1.16.4",
        "resolve-url-loader": "^3.0.1",
        "sass-loader": "^7.1.0",
        "testcafe": "^1.1.0",
        "ts-loader": "^5.3.3",
        "typescript": "^3.3.3",
        "vue-template-compiler": "^2.6.7",
        "webpack": "^4.29.5"
    },
    "dependencies": {
        "axios": "^0.18.0",
        "classnames": "^2.2.6",
        "es6-promise": "^4.2.5",
        "lodash": "^4.17.11",
        "moment": "^2.24.0",
        "react": "^16.8.3",
        "react-app-polyfill": "^0.2.2",
        "react-dom": "^16.8.4",
        "react-intl": "^2.8.0",
        "sweetalert2": "^8.2.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/GCTC-NTGC/TalentCloud.git"
    },
    "bugs": {
        "url": "https://github.com/GCTC-NTGC/TalentCloud/issues"
    },
    "homepage": "https://github.com/GCTC-NTGC/TalentCloud#readme"
}
