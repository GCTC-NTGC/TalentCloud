{
    "name": "gctc-ntgc/talent-cloud",
    "description": "Codebase for talent.canada.ca",
    "license": "MIT",
    "require": {
        "php": "7.2.*",
        "astrotomic/laravel-translatable": "^11.1",
        "backpack/crud": "^3.5",
        "barryvdh/laravel-debugbar": "^3.2",
        "codezero/laravel-unique-translation": "^1.1",
        "doctrine/dbal": "^2.9",
        "fideloper/proxy": "^4.1",
        "jenssegers/date": "^3.4",
        "laravel/framework": "^5.7",
        "laravel/tinker": "^1.0",
        "mcamara/laravel-localization": "^1.3",
        "rcrowe/twigbridge": "^0.9.9",
        "spatie/laravel-translatable": "^4.1"
    },
    "require-dev": {
        "backpack/generators": "^1.2",
        "filp/whoops": "^2.3",
        "friendsofphp/php-cs-fixer": "^2.14",
        "fzaninotto/faker": "^1.8",
        "laracasts/generators": "dev-master",
        "laravel/dusk": "^5.0.0",
        "mockery/mockery": "^1.2",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^7.0",
        "reliese/laravel": "^0.0.13",
        "slevomat/coding-standard": "^4.8",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/thanks": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "files": [
            "app/Helpers/Helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "7.2"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": [
            "composer validate"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
